<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:circular="http://schemas.android.com/apk/res-auto"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:padding="20dp">
	<!-- content of both textviews and imageview is set in java code -->

	<TextView
		android:id="@+id/intro_image_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="@dimen/addddevice_title_size_land"
		android:textStyle="bold"
		android:textColor="@color/white"
		android:layout_marginBottom="25dp"
		android:text="@string/title_activity_add_sensor"
		android:layout_toEndOf="@id/progress"
		android:layout_toRightOf="@id/progress"
		android:layout_alignTop="@id/progress"
		/>

	<TextView
		android:id="@+id/intro_image_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="@dimen/adddevice_text_size_land"
		android:textColor="@color/white"
		android:text="@string/activity_add_device_dialog_text"
		android:layout_toEndOf="@id/progress"
		android:layout_toRightOf="@id/progress"
		android:layout_below="@id/intro_image_title"/>


	<com.github.lzyzsd.circleprogress.DonutProgress
		android:id="@+id/progress"
		android:layout_width="@dimen/donut_progress_size_land"
		android:layout_height="@dimen/donut_progress_size_land"
		android:layout_gravity="center"
		android:layout_marginRight="20dp"
		android:layout_marginEnd="20dp"
		circular:donut_text_color="@color/beeeon_drawer_bg"
		circular:donut_inner_bottom_text_color="@color/beeeon_drawer_bg"
		circular:donut_text_size="36sp"
		circular:donut_suffix_text=""
		circular:donut_finished_color="@color/beeeon_drawer_bg"
		circular:donut_unfinished_color="@color/beeeon_secundary_pink"
		/>
</RelativeLayout>

