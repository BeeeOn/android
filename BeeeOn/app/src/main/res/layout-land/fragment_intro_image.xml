<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:padding="20dp">
	<!-- content of both textviews and imageview is set in java code -->

	<TextView
		android:id="@+id/intro_image_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="35sp"
		android:textStyle="bold"
		android:textColor="@color/white"
		android:layout_marginBottom="25dp"

		android:layout_toEndOf="@id/intro_image_image"
		android:layout_toRightOf="@id/intro_image_image"
		android:layout_alignTop="@id/intro_image_image"/>

	<TextView
		android:id="@+id/intro_image_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="15sp"
		android:textColor="@color/white"

		android:layout_toEndOf="@id/intro_image_image"
		android:layout_toRightOf="@id/intro_image_image"
		android:layout_below="@id/intro_image_title"/>


	<ImageView
		android:id="@+id/intro_image_image"
		android:layout_width="200dp"
		android:layout_height="200dp"
		android:layout_margin="25dp"
		/>
</RelativeLayout>