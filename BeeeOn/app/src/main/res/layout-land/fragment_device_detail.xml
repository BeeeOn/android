<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<android.support.design.widget.AppBarLayout
		android:id="@+id/device_detail_appbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white">

		<RelativeLayout
			app:layout_scrollFlags="scroll"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:elevation="4dp"
			android:background="@color/beeeon_primary">

			<android.support.v7.widget.Toolbar
				app:layout_scrollFlags="scroll"
				android:id="@+id/beeeon_toolbar"
				app:titleTextAppearance="@style/TextAppearance.AppCompat.Title"
				android:minHeight="?attr/actionBarSize"
				android:background="?attr/colorPrimary"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
				app:popupTheme="@style/Theme.AppCompat.Light"
				app:titleMarginStart="16dp">

				<!-- frame layout so that progress/refresh icon can overlay -->
				<!-- TODO could be managed by <ViewSwitcher> -->
				<FrameLayout
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:layout_gravity="end"
					>

					<!-- refresh icon -->
					<ImageView
						android:id="@+id/beeeon_toolbar_refresh"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:src="@drawable/ic_action_refresh"
						android:padding="0dp"
						style="@style/Widget.AppCompat.ActionButton"
						android:visibility="invisible"
						/>

					<!-- refreshing progress bar -->
					<ProgressBar
						android:id="@+id/beeeon_toolbar_progress"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:indeterminate="true"
						android:layout_gravity="center"
						android:visibility="invisible"
						/>

				</FrameLayout>

			</android.support.v7.widget.Toolbar>

			<TextView
				android:layout_below="@id/beeeon_toolbar"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_marginLeft="16dp"
				android:layout_marginStart="16dp"
				android:text="icon"
				android:textAppearance="@style/TextAppearance.AppCompat.Caption"
				android:gravity="center"
				android:textColor="@color/beeeon_primary"
				android:background="@drawable/oval_white"/>

			<ImageView
				android:layout_below="@+id/beeeon_toolbar"
				android:id="@+id/device_detail_loc_icon"
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:layout_marginLeft="72dp"
				android:layout_marginStart="72dp"
				tools:src="@drawable/ic_loc_bathroom"/>

			<TextView
				android:layout_below="@+id/beeeon_toolbar"
				android:id="@+id/device_detail_loc_label"
				android:layout_width="wrap_content"
				android:layout_height="24dp"
				android:gravity="center_vertical"
				android:layout_marginLeft="8dp"
				android:layout_marginStart="8dp"
				android:layout_toRightOf="@+id/device_detail_loc_icon"
				android:layout_toEndOf="@+id/device_detail_loc_icon"
				android:textColor="@color/white"
				android:textAppearance="@style/TextAppearance.AppCompat.Body1"
				tools:text="Location"/>

			<ImageView
				android:id="@+id/device_detail_last_update_icon"
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:layout_marginLeft="72dp"
				android:layout_marginStart="72dp"
				android:layout_marginTop="5dp"
				android:layout_below="@+id/device_detail_loc_icon"
				android:src="@drawable/ic_clock"/>

			<TextView
				android:id="@+id/device_detail_last_update_label"
				android:layout_width="wrap_content"
				android:layout_height="24dp"
				android:gravity="center_vertical"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="8dp"
				android:layout_marginLeft="8dp"
				android:layout_marginStart="8dp"
				android:layout_below="@+id/device_detail_loc_label"
				android:layout_toRightOf="@+id/device_detail_last_update_icon"
				android:layout_toEndOf="@+id/device_detail_last_update_icon"
				android:textAppearance="@style/TextAppearance.AppCompat.Body1"
				android:textColor="@color/white"
				tools:text="14:23:34"/>

		</RelativeLayout>

		<HorizontalScrollView
			android:id="@+id/device_detail_features_scrollview"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:paddingBottom="8dp"
			app:layout_scrollFlags="scroll">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:orientation="horizontal">

				<LinearLayout
					android:id="@+id/device_detail_signal_layout"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="15dp"
					android:layout_marginStart="15dp"
					android:orientation="vertical"
					android:visibility="gone">

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/round_rectangle"
						android:orientation="horizontal"
						android:paddingLeft="8dp"
						android:paddingStart="8dp"
						android:paddingRight="8dp"
						android:paddingEnd="8dp">

						<ImageView
							android:layout_width="24dp"
							android:layout_height="24dp"
							android:src="@drawable/ic_signal"/>

						<TextView
							android:id="@+id/device_detail_signal_value"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="8dp"
							android:layout_marginStart="8dp"
							android:layout_gravity="center_vertical"
							android:textAppearance="@style/TextAppearance.AppCompat.Body1"
							android:textColor="@color/white"
							tools:text="96%"/>

					</LinearLayout>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_horizontal"
						android:textAppearance="@style/TextAppearance.AppCompat.Caption"
						android:text="@string/module_detail_label_signal"/>

				</LinearLayout>

				<LinearLayout
					android:id="@+id/device_detail_battery_layout"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="15dp"
					android:layout_marginStart="15dp"
					android:orientation="vertical"
					android:visibility="gone">

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/round_rectangle"
						android:orientation="horizontal"
						android:paddingLeft="8dp"
						android:paddingStart="8dp"
						android:paddingRight="8dp"
						android:paddingEnd="8dp">

						<ImageView
							android:layout_width="24dp"
							android:layout_height="24dp"
							android:src="@drawable/ic_battery"/>

						<TextView
							android:id="@+id/device_detail_battery_value"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="8dp"
							android:layout_marginStart="8dp"
							android:layout_gravity="center_vertical"
							android:textAppearance="@style/TextAppearance.AppCompat.Body1"
							android:textColor="@color/white"
							tools:text="96%"/>

					</LinearLayout>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_horizontal"
						android:textAppearance="@style/TextAppearance.AppCompat.Caption"
						android:text="@string/module_detail_label_battery"/>

				</LinearLayout>


				<LinearLayout
					android:id="@+id/device_detail_refresh_layout"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="15dp"
					android:layout_marginStart="15dp"
					android:orientation="vertical"
					android:visibility="gone">

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/round_rectangle"
						android:orientation="horizontal"
						android:paddingLeft="8dp"
						android:paddingStart="8dp"
						android:paddingRight="8dp"
						android:paddingEnd="8dp">

						<ImageView
							android:layout_width="24dp"
							android:layout_height="24dp"
							android:src="@drawable/ic_refresh"/>

						<TextView
							android:id="@+id/device_detail_refresh_value"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="8dp"
							android:layout_marginStart="8dp"
							android:layout_gravity="center_vertical"
							android:textAppearance="@style/TextAppearance.AppCompat.Body1"
							android:textColor="@color/white"
							tools:text="96%"/>

					</LinearLayout>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_horizontal"
						android:textAppearance="@style/TextAppearance.AppCompat.Caption"
						android:text="@string/module_detail_refresh_time"/>

				</LinearLayout>

				<LinearLayout
					android:id="@+id/device_detail_led_layout"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="15dp"
					android:layout_marginStart="15dp"
					android:orientation="vertical"
					android:visibility="gone">


					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/round_rectangle"
						android:orientation="horizontal"
						android:paddingLeft="8dp"
						android:paddingStart="8dp"
						android:paddingRight="8dp"
						android:paddingEnd="8dp">

						<ImageView
							android:layout_width="24dp"
							android:layout_height="24dp"
							android:src="@drawable/ic_led"/>

						<TextView
							android:id="@+id/device_detail_led_value"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="8dp"
							android:layout_marginStart="8dp"
							android:layout_gravity="center_vertical"
							android:textAppearance="@style/TextAppearance.AppCompat.Body1"
							android:textColor="@color/white"
							tools:text="LED"
							android:text="@string/device_detail_label_led"/>

					</LinearLayout>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_horizontal"
						android:textAppearance="@style/TextAppearance.AppCompat.Caption"
						android:text="@string/device_detail_label_led"/>

				</LinearLayout>


			</LinearLayout>

		</HorizontalScrollView>
	</android.support.design.widget.AppBarLayout>

	<FrameLayout
		app:layout_behavior="@string/appbar_scrolling_view_behavior"
		android:id="@+id/device_detail_viewpager_layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:visibility="gone">

		<android.support.v4.view.ViewPager
			android:id="@+id/device_detail_group_pager"
			android:layout_width="match_parent"
			android:layout_height="match_parent"/>

		<android.support.design.widget.TabLayout
			android:layout_gravity="center|top"
			android:id="@+id/device_detail_group_tab_layout"
			style="@style/ModuleGroupTabLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>
	</FrameLayout>

	<FrameLayout
		app:layout_behavior="@string/appbar_scrolling_view_behavior"
		android:id="@+id/device_detail_recyclerview_layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:visibility="gone">

		<android.support.v7.widget.RecyclerView
			android:id="@+id/device_detail_modules_list"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:scrollbars="vertical"/>

		<TextView
			android:id="@+id/device_detrail_module_list_empty_view"
			android:layout_width="wrap_content"
			android:layout_height="100dp"
			android:visibility="gone"
			android:gravity="center_vertical"
			android:layout_gravity="center_horizontal"
			android:text="@string/device_detail_list_modules_no_item_title"/>
	</FrameLayout>
</android.support.design.widget.CoordinatorLayout>