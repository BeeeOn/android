<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:circular="http://schemas.android.com/apk/res-auto">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="@dimen/adddevice_padding_land">
		<!-- content of both textviews and imageview is set in java code -->

		<TextView
			android:id="@+id/device_add_intro_image_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/addddevice_title_size_land"
			android:text="@string/title_activity_add_sensor"
			android:textStyle="bold"
			android:textColor="@color/white"
			android:layout_marginBottom="25dp"

			android:layout_toEndOf="@id/device_add_circle_progress"
			android:layout_toRightOf="@id/device_add_circle_progress"
			android:layout_alignTop="@id/device_add_circle_progress"/>

		<TextView
			android:id="@+id/device_add_intro_image_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/adddevice_text_size_land"
			android:textColor="@color/white"
			android:text="@string/activity_add_device_dialog_text"

			android:layout_toEndOf="@id/device_add_circle_progress"
			android:layout_toRightOf="@id/device_add_circle_progress"
			android:layout_below="@id/device_add_intro_image_title"/>


		<com.github.lzyzsd.circleprogress.DonutProgress
			android:id="@+id/device_add_circle_progress"
			android:layout_width="@dimen/content_view_size_land"
			android:layout_height="@dimen/content_view_size_land"
			android:layout_gravity="center"
			android:layout_margin="25dp"
			circular:donut_text_color="@color/white"
			circular:donut_inner_bottom_text_color="@color/white"
			circular:donut_inner_bottom_text_size="@dimen/donut_inside_bottom_text_size_land"
			circular:donut_text_size="@dimen/donut_inside_text_size_land"
			circular:donut_suffix_text=""
			circular:donut_finished_color="@color/white"
			circular:donut_unfinished_color="@color/beeeon_accent"
			circular:donut_unfinished_stroke_width="@dimen/donut_stroke_width"
			circular:donut_finished_stroke_width="@dimen/donut_stroke_width"
			/>
	</RelativeLayout>
</ScrollView>