<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@color/beeeon_primary_cyan">


	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="@dimen/adddevice_padding_land">

		<ImageView
			android:id="@+id/add_gate_image"
			android:layout_width="@dimen/content_view_size_land"
			android:layout_height="@dimen/content_view_size_land"
			android:src="@drawable/beeeon_tutorial_aa_third_step"
			android:layout_margin="25dp"/>

		<TextView
			android:id="@+id/add_gate_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/addadapter_last_fragment_title"
			android:gravity="center_horizontal"
			android:textColor="@color/white"
			android:textStyle="bold"
			android:textSize="@dimen/addddevice_title_size_land"
			android:padding="10dp"
			android:layout_marginBottom="25dp"

			android:layout_toEndOf="@id/add_gate_image"
			android:layout_toRightOf="@id/add_gate_image"
			android:layout_alignTop="@id/add_gate_image"/>

		<TextView
			android:id="@+id/add_gate_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:text="@string/addadapter_last_fragment_text"
			android:textColor="@color/white"
			android:textSize="@dimen/adddevice_text_size_land"
			android:padding="10dp"

			android:layout_toEndOf="@id/add_gate_image"
			android:layout_toRightOf="@id/add_gate_image"
			android:layout_below="@id/add_gate_title"/>

		<RelativeLayout
			android:id="@+id/add_gate_buttons"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/add_gate_text"
			android:layout_toRightOf="@id/add_gate_image"
			android:gravity="center_horizontal">

			<Button
				android:id="@+id/add_gate_qr_button"
				android:layout_width="@dimen/addgate_button_width"
				android:layout_height="@dimen/addgate_button_height"
				android:background="@color/beeeon_secundary_pink"
				android:text="@string/addadapter_qr_button"
				android:textColor="@color/white"
				android:layout_alignParentTop="true"
				android:layout_centerHorizontal="true"/>

			<Button
				android:id="@+id/add_gate_write_it_button"
				android:layout_width="@dimen/addgate_button_width"
				android:layout_height="@dimen/addgate_button_height"
				android:background="@color/beeeon_text_hint"
				android:text="@string/addadapter_manual_edit"
				android:textColor="@color/white"
				android:layout_alignParentTop="true"
				android:layout_toRightOf="@+id/add_gate_qr_button"
				android:layout_toEndOf="@+id/add_gate_qr_button"/>
		</RelativeLayout>
	</RelativeLayout>
</ScrollView>