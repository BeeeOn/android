<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

  <RelativeLayout
	  android:id="@+id/profile_user_info"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
	android:layout_margin="10dp">

    <ImageView
      android:id="@+id/profile_image"
      android:layout_alignParentStart="true"
      android:layout_alignParentLeft="true"
      android:layout_width="40dp"
      android:layout_height="40dp"
      />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/profile_name"
      android:textSize="16sp"
      android:gravity="top"
      android:textColor="@color/beeeon_text_color"
      android:layout_alignParentTop="true"
      android:layout_toRightOf="@+id/profile_image"
      android:layout_toEndOf="@+id/profile_image"
      android:layout_marginLeft="10dp"
      android:layout_marginStart="10dp"
      />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/profile_detail"
      android:textSize="14sp"
      android:textColor="@color/beeeon_text_hint"
      android:layout_below="@+id/profile_name"
      android:layout_alignStart="@+id/profile_name"
      android:layout_alignLeft="@+id/profile_name"
      />
	  
	  <TextView
		  android:id="@+id/profile_points"
		  android:layout_width="46dp"
		  android:layout_height="40dp"
		  android:textColor="@color/white"
		  android:textSize="20sp"
		  android:textStyle="bold"
		  android:gravity="center"
		  android:layout_centerHorizontal="true"
		  android:layout_alignParentRight="true"
		  android:layout_alignParentEnd="true"
		  android:layout_marginRight="5dp"
		  android:layout_marginEnd="5dp"
		  android:background="@drawable/hexagon_pink"
		  />
    </RelativeLayout>

	<RelativeLayout
		android:id="@+id/profile_more"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/profile_user_info">

		<com.melnykov.fab.FloatingActionButton
			android:id="@+id/profile_more_arrow"
			xmlns:fab="http://schemas.android.com/apk/res-auto"
			android:src="@drawable/ic_action_next_item"
			fab:fab_colorNormal="@color/darkgray"
			fab:fab_type="mini"
			fab:fab_shadow="false"
			fab:fab_colorPressed="@color/black"
			fab:fab_colorRipple="@color/beeeon_secundary_pink"
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:layout_marginLeft="10dp"
			android:layout_marginStart="10dp"
			android:visibility="invisible"
			/>

		<TextView
			android:id="@+id/profile_more_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_marginStart="10dp"
			android:text="@string/profile_more_accounts"
			android:textSize="16sp"
			android:textColor="@color/beeeon_text_color"
			android:layout_toRightOf="@+id/profile_more_arrow"
			android:layout_toEndOf="@+id/profile_more_arrow"
			/>

		<com.melnykov.fab.FloatingActionButton
			android:id="@+id/profile_more_add"
			xmlns:fab="http://schemas.android.com/apk/res-auto"
			android:src="@drawable/ic_add_white_24dp"
			fab:fab_colorNormal="@color/beeeon_secundary_pink"
			fab:fab_type="mini"
			fab:fab_shadow="false"
			fab:fab_colorPressed="@color/black"
			fab:fab_colorRipple="@color/beeeon_secundary_pink"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_marginRight="20dp"
			android:layout_marginEnd="20dp"
			android:layout_alignParentEnd="true"
			android:layout_alignParentRight="true"
			android:visibility="invisible"
			/>

		<!-- Facebook, Twitter etc..
		     Hidden by default, shown only after click on profile_more_text -->
		<RelativeLayout
			android:id="@+id/profile_more_accounts"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="40dp"
			android:layout_marginStart="40dp"
			android:visibility="invisible"
			android:layout_below="@+id/profile_more_arrow">

			<RelativeLayout
				android:id="@+id/profile_facebook"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:visibility="invisible"
				android:padding="0dp"
				android:layout_margin="0dp">

				<ImageView
					android:id="@+id/profile_facebook_image"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:layout_marginLeft="10dp"
					android:layout_marginStart="10dp"
					android:layout_marginRight="10dp"
					android:layout_marginEnd="10dp"
					android:background="@drawable/person_facebook"/>

				<TextView
					android:id="@+id/profile_facebook_name"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="15sp"
					android:textColor="@color/beeeon_text_color"
					android:text="@string/downloading_data"
					android:layout_centerVertical="true"
					android:layout_toRightOf="@+id/profile_facebook_image"
					android:layout_toEndOf="@+id/profile_facebook_image"/>
				</RelativeLayout>

			<RelativeLayout
				android:id="@+id/profile_vkontakte"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/profile_facebook"
				android:visibility="invisible"
				android:padding="0dp"
				android:layout_margin="0dp">

				<ImageView
					android:id="@+id/profile_vkontakte_image"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:layout_marginLeft="10dp"
					android:layout_marginStart="10dp"
					android:layout_marginRight="10dp"
					android:layout_marginEnd="10dp"
					android:background="@drawable/person_vkontakte"/>

				<TextView
					android:id="@+id/profile_vkontakte_name"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="15sp"
					android:textColor="@color/beeeon_text_color"
					android:text="@string/downloading_data"
					android:layout_centerVertical="true"
					android:layout_toRightOf="@+id/profile_vkontakte_image"
					android:layout_toEndOf="@+id/profile_vkontakte_image"/>
			</RelativeLayout>

			<RelativeLayout
				android:id="@+id/profile_twitter"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/profile_vkontakte"
				android:visibility="invisible">

				<ImageView
					android:id="@+id/profile_twitter_image"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:layout_marginLeft="10dp"
					android:layout_marginStart="10dp"
					android:layout_marginRight="10dp"
					android:layout_marginEnd="10dp"
					android:background="@drawable/person_twitter"/>

				<TextView
					android:id="@+id/profile_twitter_name"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="15sp"
					android:textColor="@color/beeeon_text_color"
					android:layout_centerVertical="true"
					android:layout_toRightOf="@+id/profile_twitter_image"
					android:layout_toEndOf="@+id/profile_twitter_image"/>
			</RelativeLayout>
		</RelativeLayout>
	</RelativeLayout>

	<ListView
    android:id="@+id/gam_category_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:layout_below="@id/profile_more"
    android:divider="@null"
    android:dividerHeight="0dp"
    />
</RelativeLayout>