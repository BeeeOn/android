<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/beeeon_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:minHeight="?attr/actionBarSize"
    android:theme="@style/AppTheme.AppBar"
    app:popupTheme="@style/Theme.AppCompat.Light"
    app:titleMarginStart="16dp"
    app:titleTextAppearance="@style/TextAppearance.AppCompat.Title"
    >

    <!-- frame layout so that progress/refresh icon can overlay -->
    <!-- TODO could be managed by <ViewSwitcher> -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        >

        <!-- refresh icon -->
        <ImageView
            android:id="@+id/beeeon_toolbar_refresh"
            style="@style/Widget.AppCompat.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/toolbar_refresh_title"
            android:padding="0dp"
            android:src="@drawable/ic_refresh_black_24dp"
            android:tint="@color/white"
            android:visibility="invisible"
            tools:visibility="visible"
            />

        <!-- refreshing progress bar -->
        <ProgressBar
            android:id="@+id/beeeon_toolbar_progress"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:visibility="invisible"
            />

    </FrameLayout>

</android.support.v7.widget.Toolbar>