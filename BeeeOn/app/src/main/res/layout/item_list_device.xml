<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_module_item_layout"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    >

    <ImageView
        android:id="@+id/list_item_icon"
        android:layout_width="@dimen/size_avatar"
        android:layout_height="@dimen/size_avatar"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/space_double"
        android:layout_marginStart="@dimen/space_double"
        android:background="@drawable/oval_primary"
        android:padding="@dimen/space_normal"
        android:src="@drawable/ic_settings_input_antenna_black_24dp"
        android:tint="@color/white"
        />

    <ImageView
        android:id="@+id/list_item_status"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/list_item_icon"
        android:layout_marginLeft="-14dp"
        android:layout_marginStart="-14dp"
        android:layout_toEndOf="@+id/list_item_icon"
        android:layout_toRightOf="@+id/list_item_icon"
        android:background="@drawable/oval_red"
        android:padding="4dp"
        android:src="@drawable/ic_warning_black_24dp"
        android:tint="@color/white"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/list_item_additional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/list_item_icon"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        tools:text="100%"
        />

    <TextView
        android:id="@+id/list_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/list_item_icon"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="-2dp"
        android:layout_toEndOf="@id/list_item_icon"
        android:layout_toLeftOf="@id/list_item_additional"
        android:layout_toRightOf="@id/list_item_icon"
        android:layout_toStartOf="@id/list_item_additional"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/beeeon_primary_text"
        tools:text="Device name"
        />

    <TextView
        android:id="@+id/list_item_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/list_item_additional"
        android:layout_alignLeft="@id/list_item_title"
        android:layout_alignRight="@id/list_item_additional"
        android:layout_alignStart="@id/list_item_title"
        android:layout_below="@id/list_item_title"
        android:gravity="bottom"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/beeeon_secondary_text"
        tools:text="Device manufacturer"
        />

    <TextView
        android:id="@+id/list_item_subtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/list_item_title"
        android:layout_alignStart="@id/list_item_title"
        android:layout_below="@id/list_item_subtitle"
        android:gravity="bottom"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/beeeon_primary"
        tools:text="Last updated 04:44"
        />

</RelativeLayout>