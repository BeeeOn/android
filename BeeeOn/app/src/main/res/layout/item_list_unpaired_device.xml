<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="72dp"
	android:background="?attr/selectableItemBackground"
	>

	<TextView
		android:id="@+id/list_item_title"
		android:layout_width="match_parent"
		android:layout_height="36dp"
		android:singleLine="true"
		android:ellipsize="end"
		android:textColor="@color/beeeon_primary_text"
		android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
		android:layout_marginLeft="@dimen/space_big"
		android:layout_marginStart="@dimen/space_big"
		android:layout_marginRight="@dimen/space_big"
		android:layout_marginEnd="@dimen/space_big"
		android:gravity="bottom"
		tools:text="Device name"
		/>

	<TextView
		android:id="@+id/list_item_subtitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="bottom"
		android:singleLine="true"
		android:textColor="@color/beeeon_secondary_text"
		android:textAppearance="@style/TextAppearance.AppCompat.Caption"
		android:layout_below="@id/list_item_title"
		android:layout_alignLeft="@id/list_item_title"
		android:layout_alignStart="@id/list_item_title"
		tools:text="initialized:"
		/>

	<TextView
		android:id="@+id/list_item_subtext"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:singleLine="true"
		android:textColor="@color/beeeon_primary"
		android:textAppearance="@style/TextAppearance.AppCompat.Caption"
		tools:text="04:44 PM"
		android:layout_below="@id/list_item_title"
		android:layout_toRightOf="@id/list_item_subtitle"
		android:layout_toEndOf="@id/list_item_subtitle"
		android:layout_marginLeft="5dp"
		android:layout_marginStart="5dp"
		/>
</RelativeLayout>