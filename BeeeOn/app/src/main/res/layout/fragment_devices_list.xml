<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				xmlns:fab="http://schemas.android.com/apk/res-auto"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				tools:context="com.rehivetech.beeeon.gui.fragment.DevicesListFragment">


	<android.support.v7.widget.RecyclerView
		android:id="@+id/devices_list_recyclerview"
		android:scrollbars="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:listitem="@layout/item_list_module_item"
		android:paddingBottom="88dp"
		android:clipToPadding="false"
		/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center"
		android:orientation="vertical"
		>

		<TextView
			android:id="@+id/devices_list_no_items_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:text="@string/module_list_no_device_cap"
			android:textAppearance="@style/TextAppearance.AppCompat.Headline"
			android:textColor="@color/gray_dark"
			android:visibility="gone"
			/>

		<Button
			android:id="@+id/devices_list_refresh_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:text="@string/layout_device_list_refresh_list"
			android:visibility="gone"
			/>
	</LinearLayout>

	<net.i2p.android.ext.floatingactionbutton.FloatingActionsMenu
		android:id="@+id/devices_list_fab"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
		style="@style/BeeeOn.Fab.Menu"
		fab:fab_labelStyle="@style/BeeeOn.Fab.Menu.Label">

		<net.i2p.android.ext.floatingactionbutton.FloatingActionButton
			android:id="@+id/devices_list_action_add_device"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			fab:fab_title="@string/manifest_title_device_add"
			fab:fab_icon="@drawable/ic_add_white_24dp"
			style="@style/BeeeOn.Fab.Mini"
			/>

		<net.i2p.android.ext.floatingactionbutton.FloatingActionButton
			android:id="@+id/devices_list_action_add_gate"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			fab:fab_title="@string/main_action_gate_add"
			fab:fab_icon="@drawable/ic_add_white_24dp"
			style="@style/BeeeOn.Fab.Mini"
			/>

	</net.i2p.android.ext.floatingactionbutton.FloatingActionsMenu>


</RelativeLayout>
