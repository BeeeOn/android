<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent">

	<LinearLayout
		android:paddingLeft="72dp"
		android:paddingRight="16dp"
		android:paddingBottom="20dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/beeeon_primary"
		android:orientation="vertical">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/fragment_gate_edit_gate_name"
			android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
			android:textColor="@color/gray_light"
			/>

		<EditText
			android:id="@+id/fragment_gate_edit_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.AppCompat.Display1"
			android:textColorLink="@color/white"
			android:paddingBottom="20dp"
			android:textColor="@color/white"
			android:textColorHint="@color/white"
			/>
	</LinearLayout>

	<View
		style="@style/BeeeOn.Divider.Full"
		android:layout_marginBottom="16dp"
		/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/fragment_gate_edit_gate_id_read_only"
		android:textColor="@color/beeeon_secondary_text"
		android:layout_marginBottom="7dp"
		android:textAppearance="@style/TextAppearance.AppCompat.Caption"
		android:layout_marginLeft="72dp"
		android:layout_marginStart="72dp"
		/>

	<TextView
		android:id="@+id/fragment_gate_edit_gate_id"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="@style/TextAppearance.AppCompat.Body1"
		android:textColor="@color/beeeon_secondary_text"
		android:layout_marginLeft="72dp"
		android:layout_marginStart="72dp"
		android:layout_marginBottom="16dp"
		/>

	<View
		style="@style/BeeeOn.Divider.Full"
		android:layout_marginBottom="16dp"
		/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/time_zone"
		android:textColor="@color/beeeon_secondary_text"
		android:textAppearance="@style/TextAppearance.AppCompat.Caption"
		android:layout_marginLeft="72dp"
		android:layout_marginStart="72dp"
		/>

	<Spinner
		android:id="@+id/fragment_gate_edit_spinner"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="16dp"
		android:layout_marginLeft="72dp"
		android:layout_marginStart="72dp"
		android:layout_marginRight="@dimen/activity_horizontal_margin"
		android:layout_marginEnd="@dimen/activity_horizontal_margin"
		/>

	<View style="@style/BeeeOn.Divider.Full" />
</LinearLayout>