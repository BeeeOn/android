<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<android.support.design.widget.AppBarLayout
		android:id="@+id/device_detail_appbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		style="@style/Widget.Design.AppBarLayout"
		android:fitsSystemWindows="true">

		<include layout="@layout/layout_beeeon_toolbar"/>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<!--<TextView-->
				<!--android:layout_width="50dp"-->
				<!--android:layout_height="50dp"-->
				<!--android:layout_marginLeft="16dp"-->
				<!--android:layout_marginStart="16dp"-->
				<!--android:text="icon"-->
				<!--android:textAppearance="@style/TextAppearance.AppCompat.Caption"-->
				<!--android:gravity="center"-->
				<!--android:textColor="@color/beeeon_primary"-->
				<!--android:background="@drawable/oval_white"/>-->

			<TextView
				android:id="@+id/device_detail_device_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="72dp"
				android:layout_marginStart="72dp"
				android:paddingBottom="16dp"
				android:textAppearance="@style/TextAppearance.AppCompat.Headline"
				android:textColor="@color/white"
				tools:text="Device Name"/>


			<ImageView
				android:id="@+id/device_detail_last_update_icon"
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:layout_marginLeft="72dp"
				android:layout_marginStart="72dp"
				android:layout_below="@id/device_detail_device_name"
				android:src="@drawable/ic_clock"/>

			<TextView
				android:id="@+id/device_detail_last_update_label"
				android:layout_width="wrap_content"
				android:layout_height="24dp"
				android:gravity="center_vertical"
				android:layout_marginBottom="8dp"
				android:layout_marginLeft="8dp"
				android:layout_marginStart="8dp"
				android:layout_toRightOf="@id/device_detail_last_update_icon"
				android:layout_toEndOf="@id/device_detail_last_update_icon"
				android:layout_below="@id/device_detail_device_name"
				android:textAppearance="@style/TextAppearance.AppCompat.Body1"
				android:textColor="@color/white"
				tools:text="14:23:34"/>

		</RelativeLayout>
		<android.support.v4.widget.Space
			android:id="@+id/device_detail_appbar_space"
			android:visibility="gone"
			android:layout_width="match_parent"
			android:layout_height="8dp"/>
	</android.support.design.widget.AppBarLayout>


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:layout_marginTop="16dp"
		android:layout_marginBottom="16dp"
		app:layout_behavior="@string/appbar_scrolling_view_behavior">

		<HorizontalScrollView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:scrollbarStyle="outsideInset"
			android:paddingBottom="5dp">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:orientation="horizontal">

				<LinearLayout
					android:id="@+id/device_detail_location_layout"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="15dp"
					android:layout_marginStart="15dp"

					android:orientation="vertical">

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/round_rectangle"
						android:orientation="horizontal"
						android:paddingLeft="8dp"
						android:paddingStart="8dp"
						android:paddingRight="8dp"
						android:paddingEnd="8dp"
						android:paddingTop="5dp"
						android:paddingBottom="5dp">

						<ImageView
							android:id="@+id/device_detail_loc_icon"
							android:layout_width="24dp"
							android:layout_height="24dp"/>

						<TextView
							android:id="@+id/device_detail_loc_label"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="8dp"
							android:layout_marginStart="8dp"
							android:layout_gravity="center_vertical"
							android:textAppearance="@style/TextAppearance.AppCompat.Body1"
							android:textColor="@color/white"
							tools:text="96%"/>

					</LinearLayout>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_horizontal"
						android:textAppearance="@style/TextAppearance.AppCompat.Caption"
						android:text="@string/module_edit_label_detail_location"/>

				</LinearLayout>

				<LinearLayout
					android:id="@+id/device_detail_signal_layout"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="15dp"
					android:layout_marginStart="15dp"
					android:orientation="vertical"
					android:visibility="gone">

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/round_rectangle"
						android:orientation="horizontal"
						android:paddingLeft="8dp"
						android:paddingStart="8dp"
						android:paddingRight="8dp"
						android:paddingEnd="8dp"
						android:paddingTop="5dp"
						android:paddingBottom="5dp">

						<ImageView
							android:layout_width="24dp"
							android:layout_height="24dp"
							android:src="@drawable/ic_signal"/>

						<TextView
							android:id="@+id/device_detail_signal_value"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="8dp"
							android:layout_marginStart="8dp"
							android:layout_gravity="center_vertical"
							android:textAppearance="@style/TextAppearance.AppCompat.Body1"
							android:textColor="@color/white"
							tools:text="96%"/>

					</LinearLayout>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_horizontal"
						android:textAppearance="@style/TextAppearance.AppCompat.Caption"
						android:text="@string/module_detail_label_signal"/>

				</LinearLayout>

				<LinearLayout
					android:id="@+id/device_detail_battery_layout"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="15dp"
					android:layout_marginStart="15dp"
					android:orientation="vertical"
					android:visibility="gone">

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/round_rectangle"
						android:orientation="horizontal"
						android:paddingLeft="8dp"
						android:paddingStart="8dp"
						android:paddingRight="8dp"
						android:paddingEnd="8dp"
						android:paddingTop="5dp"
						android:paddingBottom="5dp">

						<ImageView
							android:layout_width="24dp"
							android:layout_height="24dp"
							android:src="@drawable/ic_battery"/>

						<TextView
							android:id="@+id/device_detail_battery_value"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="8dp"
							android:layout_marginStart="8dp"
							android:layout_gravity="center_vertical"
							android:textAppearance="@style/TextAppearance.AppCompat.Body1"
							android:textColor="@color/white"
							tools:text="96%"/>

					</LinearLayout>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_horizontal"
						android:textAppearance="@style/TextAppearance.AppCompat.Caption"
						android:text="@string/module_detail_label_battery"/>

				</LinearLayout>


				<LinearLayout
					android:id="@+id/device_detail_refresh_layout"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="15dp"
					android:layout_marginStart="15dp"
					android:orientation="vertical"
					android:visibility="gone">

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/round_rectangle"
						android:orientation="horizontal"
						android:paddingLeft="8dp"
						android:paddingStart="8dp"
						android:paddingRight="8dp"
						android:paddingEnd="8dp"
						android:paddingTop="5dp"
						android:paddingBottom="5dp">

						<ImageView
							android:layout_width="24dp"
							android:layout_height="24dp"
							android:src="@drawable/ic_refresh"/>

						<TextView
							android:id="@+id/device_detail_refresh_value"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="8dp"
							android:layout_marginStart="8dp"
							android:layout_gravity="center_vertical"
							android:textAppearance="@style/TextAppearance.AppCompat.Body1"
							android:textColor="@color/white"
							tools:text="96%"/>

					</LinearLayout>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_horizontal"
						android:textAppearance="@style/TextAppearance.AppCompat.Caption"
						android:text="@string/module_detail_refresh_time"/>

				</LinearLayout>

				<LinearLayout
					android:id="@+id/device_detail_led_layout"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="15dp"
					android:layout_marginStart="15dp"
					android:orientation="vertical"
					android:visibility="gone">


					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/round_rectangle"
						android:orientation="horizontal"
						android:paddingLeft="8dp"
						android:paddingStart="8dp"
						android:paddingRight="8dp"
						android:paddingEnd="8dp"
						android:paddingTop="5dp"
						android:paddingBottom="5dp">

						<ImageView
							android:layout_width="24dp"
							android:layout_height="24dp"
							android:src="@drawable/ic_led"/>

						<TextView
							android:id="@+id/device_detail_led_value"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="8dp"
							android:layout_marginStart="8dp"
							android:layout_gravity="center_vertical"
							android:textAppearance="@style/TextAppearance.AppCompat.Body1"
							android:textColor="@color/white"
							tools:text="LED"
							android:text="@string/device_detail_label_led"/>

					</LinearLayout>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_horizontal"
						android:textAppearance="@style/TextAppearance.AppCompat.Caption"
						android:text="@string/device_detail_label_led"/>

				</LinearLayout>


			</LinearLayout>

		</HorizontalScrollView>

		<FrameLayout
			app:layout_behavior="@string/appbar_scrolling_view_behavior"
			android:id="@+id/device_detail_viewpager_layout"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:visibility="gone">

			<android.support.v4.view.ViewPager
				android:id="@+id/device_detail_group_pager"
				android:layout_width="match_parent"
				android:layout_height="match_parent"/>

			<android.support.design.widget.TabLayout
				android:layout_gravity="center|top"
				android:id="@+id/device_detail_group_tab_layout"
				style="@style/ModuleGroupTabLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>
		</FrameLayout>

		<FrameLayout
			android:id="@+id/device_detail_recyclerview_layout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<android.support.v7.widget.RecyclerView
				android:id="@+id/device_detail_modules_list"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:scrollbars="vertical"/>

			<TextView
				android:id="@+id/device_detrail_module_list_empty_view"
				android:layout_width="wrap_content"
				android:layout_height="100dp"
				android:visibility="gone"
				android:gravity="center_vertical"
				android:layout_gravity="center_horizontal"
				android:text="@string/device_detail_list_modules_no_item_title"/>
		</FrameLayout>
	</LinearLayout>

	<!--<android.support.design.widget.FloatingActionButton-->
		<!--android:id="@+id/device_detail_floating_action_button"-->
		<!--android:layout_width="wrap_content"-->
		<!--android:layout_height="wrap_content"-->
		<!--android:layout_margin="16dp"-->
		<!--app:borderWidth="0dp"-->
		<!--app:fabSize="normal"-->
		<!--android:clickable="true"-->
		<!--android:src="@drawable/ic_menu_chart"-->
		<!--app:layout_anchor="@id/device_detail_appbar"-->
		<!--app:layout_anchorGravity="bottom|right|end"/>-->

</android.support.design.widget.CoordinatorLayout>