<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:minWidth="160dp"
				android:minHeight="140dp"
				android:padding="@dimen/widget_margin"
				android:layout_gravity="center"
				>

	<!-- clock -->
	<RelativeLayout
		android:id="@+id/widget_clock_container"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		>
		<include layout="@layout/widget_include_clock" />
	</RelativeLayout>

	<!-- date -->
	<RelativeLayout
		android:id="@+id/widget_date_container"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/widget_clock_container"
		android:layout_marginTop="-10dp"
		android:layout_centerHorizontal="true"
		>
		<include layout="@layout/widget_include_date" />
	</RelativeLayout>

	<TextView
		android:id="@+id/widget_clock_household_label"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/household"
		android:textSize="14sp"
		android:textColor="@color/beeeon_primary_cyan"
		android:layout_below="@+id/widget_date_container"
		android:layout_alignLeft="@+id/widget_clock_container"
		android:layout_alignStart="@+id/widget_clock_container"/>

	<!-- value layout - inflated programmatically -->
	<RelativeLayout
		android:id="@+id/value_container_inside_temp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:layout_below="@id/widget_clock_household_label"
		android:layout_alignLeft="@+id/widget_clock_household_label"
		android:layout_alignStart="@+id/widget_clock_household_label"
		/>

	<RelativeLayout
		android:id="@+id/value_container_inside_humid"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:layout_below="@+id/value_container_inside_temp"
		android:layout_alignLeft="@+id/value_container_inside_temp"
		android:layout_alignStart="@+id/value_container_inside_temp"
		>
		<include layout="@layout/widget_include_value_unit" android:id="@+id/xxx"/>
		<include layout="@layout/widget_include_value_unit"
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content"
				 android:layout_below="@+id/xxx" />
		</RelativeLayout>

	<TextView
		android:id="@+id/widget_clock_weather_city"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="CITY"
		android:layout_below="@+id/value_container_inside_humid"
		android:layout_alignLeft="@+id/widget_clock_container"
		android:layout_alignStart="@+id/widget_clock_container"/>

	<TextView
		android:id="@+id/widget_clock_weather_temperature"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="TEMPERATURE"
		android:textStyle="bold"
		android:layout_below="@+id/widget_clock_weather_city"
		android:layout_alignLeft="@+id/widget_clock_container"
		android:layout_alignStart="@+id/widget_clock_container"/>

	<ImageView
		android:id="@+id/widget_weather_icon"
		android:layout_width="60dp"
		android:layout_height="60dp"
		android:layout_alignTop="@+id/widget_clock_household_label"
		android:layout_alignParentRight="true"
		android:src="@drawable/weather"
		/>

</RelativeLayout>