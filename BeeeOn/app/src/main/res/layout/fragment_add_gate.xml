<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@color/beeeon_primary_cyan">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:orientation="vertical"
		android:padding="@dimen/adddevice_padding">


		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="20dp"
			android:textSize="@dimen/adddevice_title_size"
			android:textStyle="bold"
			android:gravity="center"
			android:textColor="@color/white"
			android:text="@string/addadapter_last_fragment_title"
			android:paddingBottom="10dp"
			/>


		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:padding="20dp">

			<Button
				android:id="@+id/add_gate_qr_button"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:background="@color/beeeon_secundary_pink"
				android:text="@string/addadapter_qr_button"
				android:textColor="@color/white"
				android:textSize="15sp"
				android:padding="10dp"
				android:layout_marginRight="10dp"
				android:drawableBottom="@drawable/qrcode"/>

			<Button
				android:id="@+id/add_gate_write_it_button"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:background="@color/beeeon_text_hint"
				android:text="@string/addadapter_manual_edit"
				android:textColor="@color/white"
				android:textSize="15sp"
				android:padding="10dp"
				android:drawableBottom="@drawable/pen"/>
		</LinearLayout>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:text="@string/addadapter_last_fragment_text"
			android:textColor="@color/white"
			android:textSize="@dimen/adddevice_text_size"
			android:padding="10dp"
			/>

	</LinearLayout>
</ScrollView>
