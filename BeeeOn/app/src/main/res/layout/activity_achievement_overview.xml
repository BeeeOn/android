<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="match_parent">

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="50dp"
		android:layout_margin="10dp">

		<ImageView
			android:id="@+id/achievement_category_icon"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:src="@drawable/beeeon_logo"
			android:layout_alignParentStart="true"
			android:layout_alignParentLeft="true"
			android:layout_marginEnd="10dp"
			android:layout_marginRight="10dp"
			android:layout_centerVertical="true"
			/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/achievement_category_name"
			android:textSize="18sp"
			android:gravity="top"
			android:textColor="@color/beeeon_secundary_pink"
			android:layout_alignParentTop="true"
			android:layout_toRightOf="@+id/achievement_category_icon"
			android:layout_toEndOf="@+id/achievement_category_icon"
			/>

		<TextView
			android:id="@+id/achievement_category_detail"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="14sp"
			android:textColor="@color/beeeon_text_hint"
			android:layout_below="@+id/achievement_category_name"
			android:layout_toRightOf="@+id/achievement_category_icon"
			android:layout_toEndOf="@+id/achievement_category_icon"
			/>

		<TextView
			android:id="@+id/achievement_category_points"
			android:layout_width="46dp"
			android:layout_height="40dp"
			android:textColor="@color/white"
			android:textSize="24sp"
			android:textStyle="bold"
			android:gravity="center"
			android:layout_centerHorizontal="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"
			android:layout_marginRight="5dp"
			android:layout_marginEnd="5dp"
			android:background="@drawable/hexagon_pink"
			/>

		<ImageView
			android:layout_width="match_parent"
			android:layout_height="1px"
			android:src="@color/black"
			android:layout_alignParentBottom="true"
			/>

	</RelativeLayout>

	<ListView
		android:id="@+id/achievement_list"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:divider="@null"
		android:dividerHeight="0dp"
		android:paddingTop="60dp"
		/>

</RelativeLayout>