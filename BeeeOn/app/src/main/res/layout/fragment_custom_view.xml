<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingStart="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingEnd="@dimen/activity_horizontal_margin"
	android:background="@color/beeeon_background">

	<TextView
		android:id="@+id/custom_view_chart_label"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:singleLine="true"
		android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

	<LinearLayout
		android:id="@+id/customview_chart_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/custom_view_chart_label"
		android:orientation="vertical">

	</LinearLayout>

	<Button
		android:id="@+id/custom_view_chart_show_legend_btn"
		android:visibility="gone"
		android:theme="@style/BeeeOn.Button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/customview_chart_layout"
		android:layout_centerHorizontal="true"
		android:text="@string/module_graph_show_y_labels_button"/>

	<View
		style="@style/BeeeOn.Divider.Full"
		android:layout_below="@id/custom_view_chart_show_legend_btn"
		android:layout_marginTop="@dimen/activity_vertical_margin"
		android:layout_marginBottom="@dimen/activity_vertical_margin"/>

</RelativeLayout>