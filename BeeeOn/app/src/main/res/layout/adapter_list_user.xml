<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_user_item_layout"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:paddingTop="16dp"
    >

    <ImageView
        android:id="@+id/adapter_list_user_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:adjustViewBounds="true"
        android:background="@drawable/oval_primary"
        android:padding="@dimen/space_normal"
        android:src="@drawable/ic_person_black_24dp"
        />

    <TextView
        android:id="@+id/adapter_list_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/beeeon_primary_text"
        tools:text="John Doe"
        />

    <TextView
        android:id="@+id/adapter_list_user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/adapter_list_user_name"
        android:layout_alignStart="@id/adapter_list_user_name"
        android:layout_below="@id/adapter_list_user_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/beeeon_secondary_text"
        tools:text="john.doe@gmail.com"
        />

    <TextView
        android:id="@+id/adapter_list_user_role"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/adapter_list_user_email"
        android:layout_alignStart="@id/adapter_list_user_email"
        android:layout_below="@id/adapter_list_user_email"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/beeeon_secondary_text"
        tools:text="Administrator"
        />

    <!-- separator -->
    <View
        style="@style/BeeeOn.Divider"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
