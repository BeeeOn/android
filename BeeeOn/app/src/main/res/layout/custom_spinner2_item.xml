<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    tools:ignore="UseCompoundDrawables">
    
    <ImageView
         android:id="@+id/custom_spinner2_icon"
         android:contentDescription="@string/placeholder_icon"
         android:layout_width="@dimen/custom_spinner_icon_size"
         android:layout_height="@dimen/custom_spinner_icon_size"
         android:layout_marginRight="5dp"
         android:scaleType="fitStart"
         android:src="@drawable/dev_unknown"
        />
    
    <RelativeLayout
        style="?android:attr/spinnerDropDownItemStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/custom_spinner2_label"
            android:textColor="@color/beeeon_text_color"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/custom_spinner2_sublabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/beeeon_text_hint"
            android:layout_below="@+id/custom_spinner2_label"
            />
    </RelativeLayout>

</LinearLayout>
