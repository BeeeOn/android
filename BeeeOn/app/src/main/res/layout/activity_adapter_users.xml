<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <TextView 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="@string/users_header"
	            android:textColor="@color/beeeon_text_color" 
			    android:textAppearance="?android:attr/textAppearanceMedium"
			    android:layout_marginLeft="5dp" />
	        <ListView
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:id="@+id/adapter_users_list"
	            android:divider="@null"
	            />
	        <TextView 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="@string/users_pending_header"
	            android:textColor="@color/beeeon_text_color" 
			    android:textAppearance="?android:attr/textAppearanceMedium"
			    android:layout_marginLeft="5dp" />
	        <!-- ListView
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:id="@+id/adapter_users_pending_list"
	            /-->
	        <Button 
	            android:layout_gravity="right|bottom"
	            android:layout_width="wrap_content"
	            android:layout_height="50dp"
	            android:text="@string/add_users_adapter"
	            android:id="@+id/add_users_adapter"
	            />
        </LinearLayout>
        
    </ScrollView>

</LinearLayout>
