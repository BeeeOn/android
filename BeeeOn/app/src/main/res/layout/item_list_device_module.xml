<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/list_device_module_item_layout"
	android:layout_width="match_parent"
	android:layout_height="72dp"
	android:orientation="vertical"
	android:background="?attr/selectableItemBackground">

	<ImageView
		android:id="@+id/list_module_item_icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_marginLeft="16dp"
		android:layout_marginStart="16dp"
		tools:src="@drawable/ic_val_unknown_gray"/>

	<TextView
		android:id="@+id/list_module_item_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="72dp"
		android:layout_marginStart="72dp"
		android:paddingTop="20dp"
		android:maxLines="1"
		android:ellipsize="end"
		android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
		tools:text="Module Title"/>

	<TextView
		android:id="@+id/list_module_item_value"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/list_module_item_title"
		android:layout_marginLeft="72dp"
		android:layout_marginStart="72dp"
		android:maxLines="1"
		android:ellipsize="end"
		android:textAppearance="@style/TextAppearance.AppCompat.Body2"
		android:textColor="@color/beeeon_accent"
		tools:text="25 Â°C"/>

</RelativeLayout>