<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/list_device_module_item_layout"
	android:layout_width="match_parent"
	android:layout_height="72dp"
	android:orientation="vertical"
	tools:showIn="@layout/fragment_device_detail"
	android:background="?attr/selectableItemBackground">

	<ImageView
		android:id="@+id/list_module_item_icon"
		android:layout_width="40dp"
		android:padding="4dp"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_marginLeft="16dp"
		android:layout_marginStart="16dp"
		tools:src="@drawable/ic_val_unknown_gray"/>

	<ImageView
		android:id="@+id/list_module_item_status"
		android:layout_alignBottom="@+id/list_module_item_icon"
		android:layout_toEndOf="@+id/list_module_item_icon"
		android:layout_toRightOf="@+id/list_module_item_icon"
		android:layout_width="20dp"
		android:layout_height="20dp"
		android:src="@drawable/ic_status_error"
		android:background="@drawable/oval_red"
		android:layout_marginTop="-20dp"
		android:layout_marginStart="-16dp"
		android:layout_marginLeft="-16dp"
		android:visibility="gone"
		/>

	<FrameLayout
		android:id="@+id/list_module_item_buttons_wrapper"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
		android:layout_centerVertical="true"
		>

		<ImageButton
			android:id="@+id/list_device_module_item_set_button"
			style="@style/Widget.AppCompat.Button.Borderless"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_marginRight="16dp"
			android:layout_marginEnd="16dp"
			android:src="@drawable/ic_settings_white_24dp"
			android:tint="@color/beeeon_accent"/>

		<android.support.v7.widget.SwitchCompat
			android:id="@+id/list_device_module_item_switch"
			android:visibility="gone"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="16dp"
			android:layout_marginEnd="16dp"/>
	</FrameLayout>

	<TextView
		android:id="@+id/list_module_item_title"
		android:layout_width="wrap_content"
		android:layout_height="36dp"
		android:layout_marginTop="4dp"
		android:gravity="bottom"
		android:layout_marginLeft="72dp"
		android:layout_marginStart="72dp"
		android:layout_toLeftOf="@id/list_module_item_buttons_wrapper"
		android:layout_toStartOf="@id/list_module_item_buttons_wrapper"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:maxLines="2"
		android:ellipsize="end"
		android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
		tools:text="Module "/>

	<TextView
		android:id="@+id/list_module_item_value"
		android:layout_width="wrap_content"
		android:layout_height="32dp"
		android:layout_below="@id/list_module_item_title"
		android:layout_marginLeft="72dp"
		android:layout_marginStart="72dp"
		android:layout_toLeftOf="@id/list_module_item_buttons_wrapper"
		android:layout_toStartOf="@id/list_module_item_buttons_wrapper"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:gravity="top"
		android:maxLines="2"
		android:ellipsize="end"
		android:textAppearance="@style/TextAppearance.AppCompat.Body2"
		android:textColor="@color/beeeon_accent"
		tools:text="25 Â°C"/>
</RelativeLayout>
