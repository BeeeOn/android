<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingLeft="8dp"
	android:paddingRight="8dp"
	>

	<!-- ********* HOUSEHOLD SETTINGS ******** -->

	<TextView
		android:id="@+id/widget_config_gateway_label"
		android:text="@string/household"
		style="@style/LinearRow.Caption"
		/>

	<TextView
		style="@style/LinearRow.Item"
		android:text="@string/widget_configuration_adapter"
		/>

	<Spinner
		android:id="@+id/widget_config_gateway_spinner"
		style="@style/BeeeOn.Spinner"
		android:layout_marginLeft="8dp"
		android:layout_marginStart="8dp"
		/>

	<!-- gate emptyview-->
	<TextView
		android:id="@+id/widget_config_gateway_emptyview"
		style="@style/LinearRow.Row"
		android:text="@string/no_gate_cap"
		android:textColor="@color/beeeon_secondary_text"
		/>

	<!-- separator -->
	<View
		style="@style/BeeeOn.Divider.Full"
		android:layout_marginTop="8dp"
		android:layout_marginBottom="8dp"
		/>

	<TextView
		style="@style/LinearRow.Item"
		android:text="@string/widget_configuration_location"
		/>

	<Spinner
		android:id="@+id/widget_config_location_layout"
		style="@style/BeeeOn.Spinner"
		android:layout_marginLeft="8dp"
		android:layout_marginStart="8dp"
		/>

	<!-- gate emptyview-->
	<TextView
		android:id="@+id/widget_config_location_emptyview"
		style="@style/LinearRow.Row"
		android:text="@string/no_locations_cap"
		android:textColor="@color/beeeon_secondary_text"
		/>

	<!-- separator -->
	<View
		style="@style/BeeeOn.Divider.Full"
		android:layout_marginTop="8dp"
		android:layout_marginBottom="8dp"
		/>

	<!-- ********* WIDGET SETTINGS ******** -->

	<TextView
		android:id="@+id/widget_config_widget_label"
		android:text="@string/widget"
		style="@style/LinearRow.Caption"
		/>

	<TextView
		android:text="@string/widget_configuration_interval_widget"
		style="@style/LinearRow.Item"
		/>

	<TextView
		android:id="@+id/widget_config_interval_text"
		style="@style/LinearRow.Row"
		/>

	<SeekBar
		android:id="@+id/widget_config_interval"
		style="@style/LinearRow.Row"
		android:layout_height="wrap_content"
		/>

	<!-- separator -->
	<View
		style="@style/BeeeOn.Divider.Full"
		android:layout_marginTop="8dp"
		android:layout_marginBottom="8dp"
		/>

</LinearLayout>