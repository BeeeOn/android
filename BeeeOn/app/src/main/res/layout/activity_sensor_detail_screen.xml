<android.support.v4.widget.SwipeRefreshLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/swipe_container"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

<ScrollView
    android:id="@+id/sensordetail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	<RelativeLayout
	    android:id="@+id/sensordetail_scroll"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	 	android:layout_gravity="top"
	    android:orientation="horizontal" >
		<!-- HEADER  contain ICON, VALUE and NAME -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="150dp"
			android:id="@+id/sen_header"
			android:background="@color/beeeon_primary_cyan"
			android:paddingLeft="16dp"
			android:paddingRight="16dp"
			android:orientation="vertical"
			android:visibility="gone">
			<!-- ICON and VALUE -->
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="84dp"
				android:orientation="horizontal">
				<!-- ICON OF SENSOR -->
				<ImageView
					android:id="@+id/sen_detail_icon"
					android:layout_width="84dp"
					android:layout_height="84dp"
					android:layout_alignParentLeft="true"
					android:layout_alignParentTop="true"
					android:src="@drawable/dev_unknown"
					android:contentDescription="Icon of device"
					/>
				<!-- VALUE OF SENSOR  or  SWITCH FOR ACTOR -->
				<LinearLayout
					android:id="@+id/sen_detail_value_wrap"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentBottom="true"
					android:layout_alignParentRight="true"
					android:orientation="vertical"
					>
					<!-- VALUE -->
					<TextView
						android:id="@+id/sen_detail_value"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="ValueSensor"
						android:textColor="@color/white"
						android:layout_gravity="right"
						android:textSize="26sp"
						/>
					<android.support.v7.widget.SwitchCompat
						android:id="@+id/sen_detail_value_switch"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="right"
						android:paddingTop="8dp"
						android:paddingBottom="8dp"
						android:focusable="false"
						android:focusableInTouchMode="false"
						android:visibility="gone"
						/>
				</LinearLayout>
			</RelativeLayout>
			<!-- NAME of SENSOR -->
			<TextView
				android:id="@+id/sen_detail_name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:layout_marginTop="8dp"
				android:ellipsize="marquee"
				android:marqueeRepeatLimit="marquee_forever"
				android:scrollHorizontally="true"
				android:singleLine="true"
				android:text="NameSensor"
				android:textColor="@color/white"
				android:textSize="28sp"
				android:textStyle="bold"/>

		</LinearLayout>
		<!-- EDIT FAB -->
		<com.melnykov.fab.FloatingActionButton
			xmlns:fab="http://schemas.android.com/apk/res-auto"
			android:id="@+id/sen_detail_edit_fab"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_mode_edit_white_24dp"
			android:layout_alignBottom="@+id/sen_header"
			android:layout_marginBottom="-20dp"
			android:layout_marginLeft="16dp"
			fab:fab_colorNormal="@color/beeeon_secundary_pink"
			fab:fab_type="mini"
			fab:fab_colorPressed="@color/beeeon_secundary_pink_pressed"
			fab:fab_colorRipple="@color/beeeon_secundary_pink"
			android:visibility="invisible"/>
		<!-- CONTENT - LOCATION, REFRESH TIME -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:layout_marginTop="24dp"
			android:layout_marginLeft="16dp"
			android:layout_marginRight="16dp"
			android:layout_below="@+id/sen_header"
			android:id="@+id/sen_first_section"
			android:visibility="invisible">
			<!-- LOCATION -->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="72dp">
				<ImageView
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:layout_gravity="center"
					android:layout_marginRight="16dp"
					android:src="@drawable/loc_bath_room"/>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:paddingTop="16dp"
					android:paddingBottom="16dp"
					android:orientation="vertical">
					<TextView
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:textColor="@color/beeeon_text_color"
						android:textSize="16sp"
						android:text="Bathroom"
						android:id="@+id/sen_detail_loc_name"/>
					<TextView
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:textColor="@color/beeeon_text_hint"
						android:textSize="14sp"
						android:text="@string/sensordetail_location_label"/>
				</LinearLayout>

			</LinearLayout>
			<!-- REFRESH TIME -->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="72dp">
				<ImageView
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:layout_gravity="center"
					android:layout_marginRight="16dp"
					android:src="@drawable/sync_darkgrey"/>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:paddingTop="16dp"
					android:paddingBottom="16dp"
					android:orientation="vertical">
					<TextView
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:textColor="@color/beeeon_text_color"
						android:textSize="16sp"
						android:text="5 min"
						android:id="@+id/sen_refresh_time_value"/>
					<TextView
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:textColor="@color/beeeon_text_hint"
						android:textSize="14sp"
						android:text="@string/sensordetail_refresh_time"/>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
		<!-- SEPARATOR 1 -->
		<View
			android:layout_width="fill_parent"
			android:layout_height="1dp"
			android:background="@color/light_gray"
			android:paddingBottom="8dp"
			android:paddingTop="8dp"
			android:layout_marginLeft="72dp"
			android:clickable="false"
			android:id="@+id/sen_sep_1"
			android:layout_below="@+id/sen_first_section"
			android:visibility="invisible"/>
		<!-- CONTENT - LOCATION, REFRESH TIME -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:layout_marginLeft="16dp"
			android:layout_marginRight="16dp"
			android:layout_below="@+id/sen_sep_1"
			android:id="@+id/sen_second_section"
			android:visibility="invisible">
			<!-- LAST UPDATE -->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="72dp">
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:paddingTop="16dp"
					android:paddingLeft="56dp"
					android:paddingBottom="16dp"
					android:orientation="vertical">
					<TextView
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:textColor="@color/beeeon_text_color"
						android:textSize="16sp"
						android:text="1 min ago"
						android:id="@+id/sen_detail_time"/>
					<TextView
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:textColor="@color/beeeon_text_hint"
						android:textSize="14sp"
						android:text="@string/sensordetail_last_update_label"/>
				</LinearLayout>
			</LinearLayout>
			<!-- BATTERY -->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="72dp">
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:paddingTop="16dp"
					android:paddingLeft="56dp"
					android:paddingBottom="16dp"
					android:orientation="vertical">
					<TextView
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:textColor="@color/beeeon_text_color"
						android:textSize="16sp"
						android:text="80%"
						android:id="@+id/sen_detail_battery_value"/>
					<TextView
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:textColor="@color/beeeon_text_hint"
						android:textSize="14sp"
						android:text="@string/sensordetail_battery_label"/>
				</LinearLayout>
			</LinearLayout>
			<!-- SIGNAL -->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="72dp">
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:paddingTop="16dp"
					android:paddingLeft="56dp"
					android:paddingBottom="16dp"
					android:orientation="vertical">
					<TextView
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:textColor="@color/beeeon_text_color"
						android:textSize="16sp"
						android:text="100%"
						android:id="@+id/sen_detail_signal_value"/>
					<TextView
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:textColor="@color/beeeon_text_hint"
						android:textSize="14sp"
						android:text="@string/sensordetail_signal_label"/>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
		<!-- SEPARATOR 2 -->
		<View
			android:layout_width="fill_parent"
			android:layout_height="1dp"
			android:background="@color/light_gray"
			android:paddingBottom="8dp"
			android:paddingTop="8dp"
			android:layout_marginLeft="72dp"
			android:clickable="false"
			android:id="@+id/sen_sep_2"
			android:layout_below="@+id/sen_second_section"
			android:visibility="invisible"/>
		<!-- GRAPH CONTENT -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="228dp"
			android:layout_below="@+id/sen_sep_2"
			android:id="@+id/sen_third_section"
			android:orientation="vertical"
			android:layout_marginLeft="16dp"
			android:layout_marginRight="16dp"
			android:visibility="invisible">
			<TextView
				android:id="@+id/sen_graph_name"
				android:layout_width="wrap_content"
				android:layout_height="48dp"
				android:gravity="center"
				android:text="@string/sen_graph_label"
				android:textColor="@color/beeeon_text_hint"
				android:textSize="14sp"/>

			<LinearLayout
				android:id="@+id/sen_graph_layout"
				android:layout_width="match_parent"
				android:layout_height="180dp"
				android:layout_below="@id/sen_graph_name"
				android:orientation="vertical"
				android:visibility="visible">

			</LinearLayout>
		</LinearLayout>
	</RelativeLayout>
</ScrollView>
</android.support.v4.widget.SwipeRefreshLayout>