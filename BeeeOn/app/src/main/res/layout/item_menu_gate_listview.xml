<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:minHeight="48dp"
	android:gravity="center_vertical"
	android:orientation="horizontal"
	android:background="@drawable/menu_item_selector"
	android:paddingBottom="0dp"
	android:paddingLeft="16dp"
	android:paddingRight="16dp"
	android:paddingTop="0dp"
	>

	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="fill_parent"
		android:layout_gravity="center_vertical"
		android:layout_weight="1"
		android:gravity="start|center_vertical"
		android:orientation="vertical">

		<TextView
			android:id="@+id/menu_gate_listview_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:singleLine="true"
			android:textColor="@color/beeeon_primary_text"
			android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

		<TextView
			android:id="@+id/menu_gate_listview_role"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:singleLine="true"
			android:textColor="@color/beeeon_secondary_text"
			android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
	</LinearLayout>

	<RadioButton
		android:id="@+id/menu_gate_listview_radio_button"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:focusable="false"
		android:focusableInTouchMode="false"
		android:clickable="false"/>

</LinearLayout>