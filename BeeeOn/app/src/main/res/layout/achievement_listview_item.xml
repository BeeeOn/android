<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/achievement_item_layout"
			  android:orientation="vertical"
			  android:layout_width="fill_parent"
			  android:layout_height="65dp">

	<RelativeLayout
		android:id="@+id/achievement_list_point_layout"
		android:layout_width="60dp"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_marginLeft="2dp"
		android:layout_marginStart="2dp"
		android:layout_marginTop="5dp">

		<TextView
			android:id="@+id/achievement_list_points"
			android:layout_width="46dp"
			android:layout_height="40dp"
			android:textColor="@color/white"
			android:textSize="26sp"
			android:textStyle="bold"
			android:paddingRight="7dp"
			android:paddingEnd="7dp"
			android:paddingLeft="0dp"
			android:paddingTop="4dp"
			android:gravity="center"
			android:layout_centerHorizontal="true"
			android:background="@drawable/hexagon_gray"
			/>

		<TextView
			android:id="@+id/achievement_list_date"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/beeeon_text_hint"
			android:textSize="12sp"
			android:layout_centerHorizontal="true"
			android:layout_below="@+id/achievement_list_points"/>

	</RelativeLayout>

	<TextView
		android:id="@+id/achievement_list_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="18sp"
		android:layout_toRightOf="@+id/achievement_list_point_layout"
		android:layout_toEndOf="@+id/achievement_list_point_layout"
		android:paddingTop="5dp"
		android:gravity="top"
		android:layout_marginLeft="5dp"
		android:layout_marginStart="5dp"
		android:textColor="@color/beeeon_primary_cyan"
		/>

	<ImageView
		android:id="@+id/achievement_list_tick"
		android:layout_width="12sp"
		android:layout_height="12sp"
		android:layout_marginLeft="2dp"
		android:layout_marginStart="2dp"
		android:layout_marginTop="4dp"
		android:layout_toRightOf="@+id/achievement_list_point_layout"
		android:layout_toEndOf="@+id/achievement_list_point_layout"
		android:layout_below="@+id/achievement_list_name"
		android:background="@drawable/ic_action_done"/>

	<TextView
		android:id="@+id/achievement_list_description"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="14sp"
		android:paddingRight="60dp"
		android:paddingEnd="60dp"
		android:paddingLeft="4dp"
		android:layout_toRightOf="@+id/achievement_list_tick"
		android:layout_toEndOf="@+id/achievement_list_tick"
		android:layout_below="@+id/achievement_list_name"
		android:textColor="@color/beeeon_text_hint"/>

	<RelativeLayout
		android:id="@+id/achievement_progress_layout"
		android:visibility="gone"
		android:paddingRight="60dp"
		android:paddingEnd="60dp"
		android:paddingLeft="4dp"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_below="@+id/achievement_list_description"
		android:layout_toRightOf="@+id/achievement_list_point_layout"
		android:layout_toEndOf="@+id/achievement_list_point_layout">

		<ProgressBar
			android:id="@+id/achievement_progress"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			style="@style/Widget.AppCompat.ProgressBar.Horizontal"
			/>

		</RelativeLayout>

	<ImageView
		android:id="@+id/achievement_list_share"
		android:layout_width="30dp"
		android:layout_height="30dp"
		android:layout_centerVertical="true"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
		android:layout_marginRight="10dp"
		android:layout_marginEnd="10dp"
		android:visibility="gone"/>

	<RelativeLayout
		android:layout_width="60dp"
		android:layout_height="fill_parent"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true">

		<TextView
			android:id="@+id/achievement_progress_text"
			android:visibility="gone"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="2dp"
			android:textSize="12sp"
			android:layout_centerHorizontal="true"
			android:layout_alignParentBottom="true"/>

		</RelativeLayout>

	<View
		style="@style/BeeeOn.Divider"
		android:layout_alignParentBottom="true"
		/>

</RelativeLayout>