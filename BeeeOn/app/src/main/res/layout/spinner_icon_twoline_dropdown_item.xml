<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	tools:ignore="UseCompoundDrawables"
	android:paddingLeft="8dp"
	android:paddingRight="8dp"
	android:minHeight="48dp"
	>

	<ImageView
		android:id="@+id/custom_spinner2_dropdown_icon"
		android:layout_width="24dp"
		android:layout_height="24dp"
		android:contentDescription="@string/placeholder_icon"
		android:layout_centerVertical="true"
		android:src="@drawable/dev_unknown"
		/>

	<TextView
		android:id="@+id/custom_spinner2_dropdown_label"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textColor="@color/beeeon_text_color"
		android:textSize="@dimen/textsize_body"
		android:layout_alignBottom="@+id/custom_spinner2_dropdown_icon"
		android:layout_toRightOf="@+id/custom_spinner2_dropdown_icon"
		android:layout_toEndOf="@+id/custom_spinner2_dropdown_icon"
		android:layout_marginLeft="8dp"
		android:layout_marginStart="8dp"
		android:paddingLeft="8dp"
		android:paddingRight="8dp"
		android:singleLine="true"
		android:ellipsize="marquee"
		/>

	<TextView
		android:id="@+id/custom_spinner2_dropdown_sublabel"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textColor="@color/beeeon_text_hint"
		android:textSize="@dimen/textsize_caption"
		android:layout_toRightOf="@+id/custom_spinner2_dropdown_icon"
		android:layout_toEndOf="@+id/custom_spinner2_dropdown_icon"
		android:layout_below="@+id/custom_spinner2_dropdown_label"
		android:layout_marginLeft="8dp"
		android:layout_marginStart="8dp"
		android:paddingLeft="8dp"
		android:paddingRight="8dp"
		android:singleLine="true"
		android:ellipsize="marquee"
		/>

</RelativeLayout>