<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/ifText"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="IF"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@drawable/oval_pink"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/oval_cyan"
        android:text="&gt;"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="25dp"
        android:id="@+id/textView"
        android:layout_below="@+id/ifText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp" />

    <Spinner
        android:id="@+id/watchdogDetailSpinnerChooseSensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ifText"
        android:layout_toEndOf="@+id/ifText" />


</RelativeLayout>