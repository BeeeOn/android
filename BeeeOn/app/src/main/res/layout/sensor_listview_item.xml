<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="72dp"
	android:id="@+id/layoutofsensor"
	>

	<ImageView
		android:id="@+id/iconofsensor"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:src="@drawable/dev_unknown"
		android:layout_marginLeft="16dp"
		android:layout_marginStart="16dp"
		android:layout_centerVertical="true"
		/>

	<TextView
		android:id="@+id/titleofsensor"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:singleLine="true"
		android:textColor="@color/beeeon_text_color"
		android:textSize="@dimen/textsize_subhead"
		android:layout_toRightOf="@+id/iconofsensor"
		android:layout_toEndOf="@+id/iconofsensor"
		android:layout_toLeftOf="@+id/valueofsensor"
		android:layout_toStartOf="@id/valueofsensor"
		android:layout_alignTop="@+id/iconofsensor"
		android:layout_marginLeft="16dp"
		android:layout_marginStart="16dp"
		/>

	<TextView
		android:id="@+id/timeofsensor"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="bottom"
		android:textColor="@color/beeeon_text_hint"
		android:textSize="@dimen/textsize_caption"
		android:layout_below="@+id/titleofsensor"
		android:layout_alignLeft="@+id/titleofsensor"
		android:layout_alignStart="@+id/titleofsensor"
		/>

	<TextView
		android:id="@+id/valueofsensor"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_toLeftOf="@+id/unitofsensor"
		android:layout_toStartOf="@+id/unitofsensor"
		android:gravity="end"
		android:ellipsize="end"
		android:scrollHorizontally="true"
		android:singleLine="true"
		android:textColor="@color/beeeon_secundary_pink"
		android:textSize="@dimen/textsize_subhead"
		android:textStyle="bold"
		android:layout_marginLeft="16dp"
		android:layout_marginStart="16dp"
		/>

	<TextView
		android:id="@+id/unitofsensor"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBaseline="@+id/valueofsensor"
		android:layout_alignBottom="@+id/valueofsensor"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
		android:textColor="@color/beeeon_secundary_pink"
		android:layout_marginRight="16dp"
		android:layout_marginEnd="16dp"
		android:textSize="@dimen/textsize_body"
		/>

	<!-- divider -->
	<View
		android:id="@+id/sensor_sep_middle"
		style="@style/BeeeOn.Divider"
		android:layout_alignParentBottom="true"
		android:clickable="false"
		/>

</RelativeLayout>