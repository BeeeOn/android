<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="72dp"
	android:id="@+id/layoutofsensor"
	>

	<ImageView
		android:id="@+id/iconofsensor"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:src="@drawable/ic_val_unknown_gray"
		android:layout_marginLeft="16dp"
		android:layout_marginStart="16dp"
		android:layout_centerVertical="true"
		/>

	<TextView
		android:id="@+id/titleofsensor"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:singleLine="true"
		android:textColor="@color/beeeon_primary_text"
		android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
		android:layout_toRightOf="@+id/iconofsensor"
		android:layout_toEndOf="@+id/iconofsensor"
		android:layout_alignTop="@+id/iconofsensor"
		android:layout_marginLeft="16dp"
		android:layout_marginStart="16dp"
		/>

	<TextView
		android:id="@+id/timeofsensor"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="bottom"
		android:textColor="@color/beeeon_secondary_text"
		android:textAppearance="@style/TextAppearance.AppCompat.Caption"
		android:layout_below="@+id/titleofsensor"
		android:layout_alignLeft="@+id/titleofsensor"
		android:layout_alignStart="@+id/titleofsensor"
		/>

	<TextView
		android:id="@+id/valueofsensor"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_toLeftOf="@+id/unitofsensor"
		android:layout_toStartOf="@+id/unitofsensor"
		android:gravity="end"
		android:ellipsize="end"
		android:scrollHorizontally="true"
		android:singleLine="false"
		android:textColor="@color/beeeon_accent"
		android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
		android:textStyle="bold"
		android:layout_marginLeft="16dp"
		android:layout_marginStart="16dp"
		android:layout_toRightOf="@+id/timeofsensor"
		android:layout_toEndOf="@+id/timeofsensor"
		/>

	<TextView
		android:id="@+id/unitofsensor"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBaseline="@+id/valueofsensor"
		android:layout_alignBottom="@+id/valueofsensor"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
		android:textColor="@color/beeeon_accent"
		android:layout_marginRight="16dp"
		android:layout_marginEnd="16dp"
		android:textAppearance="@style/TextAppearance.AppCompat.Body1"
		/>

	<!-- divider -->
	<View
		android:id="@+id/sensor_sep_middle"
		style="@style/BeeeOn.Divider"
		android:layout_alignParentBottom="true"
		android:clickable="false"
		/>

</RelativeLayout>