<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/widget_clock_time_layout"
	android:orientation="horizontal"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	>

	<TextView
		android:id="@+id/widget_clock_hours"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="60sp"
		android:textStyle="bold"
		android:text="00"
		android:textColor="@color/beeeon_primary_cyan"
		/>

	<TextView
		android:id="@+id/widget_clock_doubledots"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="60sp"
		android:textStyle="bold"
		android:text=":"
		android:layout_marginTop="-4dp"
		android:textColor="@color/beeeon_primary_cyan"
		/>

	<TextView
		android:id="@+id/widget_clock_minutes"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="60sp"
		android:textStyle="bold"
		android:text="00"
		android:textColor="@color/beeeon_primary_cyan"
		/>
</LinearLayout>