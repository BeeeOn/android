<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:paddingLeft="@dimen/activity_horizontal_margin"
				android:paddingRight="@dimen/activity_horizontal_margin"
				android:paddingTop="@dimen/activity_vertical_margin"
				android:paddingBottom="@dimen/activity_vertical_margin"
				tools:context="com.rehivetech.beeeon.gui.activity.ModuleEditActivity$ModuleEditFragment">

	<LinearLayout
		android:id="@+id/module_edit_first_section_layout"
		android:layout_width="match_parent"
		android:layout_height="72dp"
		android:orientation="vertical">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:textSize="12sp"
			android:textColor="@color/beeeon_secondary_text"
			android:text="@string/sensor_name_label"/>

		<EditText
			android:id="@+id/module_edit_name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="16sp"
			android:textColor="@color/beeeon_primary_text"/>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/module_edit_second_section_layout"
		android:layout_width="match_parent"
		android:layout_height="72dp"
		android:layout_below="@+id/module_edit_first_section_layout"
		android:orientation="vertical">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:layout_marginBottom="8dp"
			android:textSize="12sp"
			android:textColor="@color/beeeon_secondary_text"
			android:text="@string/sensordetail_location_label"/>

		<Spinner
			android:id="@+id/module_edit_location_spinner"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/module_edit_third_section_layout"
		android:layout_width="match_parent"
		android:layout_height="72dp"
		android:layout_below="@+id/module_edit_second_section_layout"
		android:orientation="vertical"
		android:visibility="gone">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:textSize="12sp"
			android:textColor="@color/beeeon_secondary_text"
			android:text="@string/addsensor_new_location_hint"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<Spinner
				android:id="@+id/module_edit_new_loc_icon"
				android:layout_width="60dp"
				android:layout_height="40dp"
				android:layout_gravity="center"/>

			<EditText
				android:id="@+id/module_edit_new_loc_text"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"/>
		</LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/module_edit_fourth_section_layout"
		android:layout_width="match_parent"
		android:layout_height="72dp"
		android:layout_below="@+id/module_edit_third_section_layout"
		android:orientation="vertical">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:layout_marginBottom="8dp"
			android:textSize="12sp"
			android:textColor="@color/beeeon_secondary_text"
			android:text="@string/refresh_time"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TextView
				android:id="@+id/module_edit_refreshtime_val"
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:textSize="16sp"
				android:layout_gravity="center"
				android:textColor="@color/beeeon_primary_text"/>

			<SeekBar
				android:id="@+id/module_edit_refreshtime_seekbar"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"/>
		</LinearLayout>

	</LinearLayout>

</RelativeLayout>
