<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	>

	<ListView
		android:id="@+id/watchdog_listview"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		style="@style/BeeeOn.DividerListView"
		android:paddingBottom="96dp"
		android:clipToPadding="false"
		/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center"
		android:orientation="vertical"
		>

		<TextView
			android:id="@+id/watchdog_list_empty_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/watchdog_list_no_rules_cap"
			android:layout_gravity="center"
			android:textSize="24sp"
			android:visibility="gone"
			android:textColor="@color/gray_dark"
			/>

		<Button
			android:id="@+id/watchdog_list_refresh_btn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:visibility="gone"
			android:text="@string/layout_module_list_watchdog_list_action_refresh_list"/>
	</LinearLayout>

	<!-- floating action button -->
	<com.melnykov.fab.FloatingActionButton
		android:id="@+id/watchdog_list_fab"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="end|bottom"
		android:src="@drawable/ic_add_white_24dp"
		style="@style/BeeeOn.Fab"
		android:layout_marginBottom="16dp"
		android:layout_marginRight="16dp"
		android:layout_marginEnd="16dp"
		/>

</FrameLayout>
