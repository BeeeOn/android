<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <!-- toolbar -->
    <include layout="@layout/beeeon_toolbar" />

    <!-- subheader -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="?colorPrimary"
        >

        <!-- name of rule -->
        <EditText
            android:id="@+id/watchdog_edit_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="bottom"
            android:textColor="@color/white"
            android:singleLine="true"
            android:textColorHint="@color/beeeon_primary_cyan_light"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:hint="@string/watchdog_rule_name"
            />
    </RelativeLayout>

    <!-- shadow -->
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@drawable/toolbar_dropshadow"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <!-- switcher (activate) fieldset -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingStart="16dp"
                android:paddingRight="16dp"
                android:paddingEnd="16dp"
                android:layout_marginTop="12dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/watchdog_activate_rule"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginStart="50dp"
                    />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/watchdog_edit_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:checked="true"
                    />
            </RelativeLayout>

            <!-- separator -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:src="@color/beeeon_separator"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="62dp"
                android:layout_marginStart="62dp"
                />

            <!-- sensor field -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingStart="16dp"
                android:paddingRight="16dp"
                android:paddingEnd="16dp"
                >

                <TextView
                    android:id="@+id/watchdog_edit_if_icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:background="@drawable/oval_pink"
                    android:text="@string/icon_if"
                    />

                <Spinner
                    android:id="@+id/watchdog_edit_sensor_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginBottom="8dp"
                    android:layout_toRightOf="@+id/watchdog_edit_if_icon"
                    android:layout_toEndOf="@id/watchdog_edit_if_icon"
                    android:layout_alignTop="@id/watchdog_edit_if_icon" />

            </RelativeLayout>

            <!-- treshold field -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingStart="16dp"
                android:paddingRight="16dp"
                android:paddingEnd="16dp"
                >

                <!--
                  - ic_action_previous_item must be first cause comparing in java code
                   - margin is less cause the shadow
                -->
                <com.melnykov.fab.FloatingActionButton
                    xmlns:fab="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/watchdog_edit_greatless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_previous_item"
                    fab:fab_colorNormal="@color/darkgray"
                    fab:fab_type="mini"
                    fab:fab_colorPressed="@color/black"
                    fab:fab_colorRipple="@color/beeeon_secundary_pink"
                    android:layout_marginLeft="44dp"
                    android:layout_marginStart="44dp"
                    android:layout_below="@+id/watchdog_edit_treshold_text"
                    />

                <TextView
                    android:id="@+id/watchdog_edit_treshold_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/treshold_value"
                    android:layout_alignStart="@+id/watchdog_edit_treshold"
                    android:layout_alignLeft="@+id/watchdog_edit_treshold"
                    />

                <EditText
                    android:id="@+id/watchdog_edit_treshold"
                    android:layout_width="100dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    android:textColor="@color/beeeon_secundary_pink"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:gravity="center_horizontal"
                    android:layout_below="@+id/watchdog_edit_treshold_text"
                    android:layout_toRightOf="@+id/watchdog_edit_greatless"
                    android:layout_toEndOf="@+id/watchdog_edit_greatless"
                    android:layout_marginLeft="16dp"
                    />

                <TextView
                    android:id="@+id/watchdog_edit_treshold_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/beeeon_secundary_pink"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:gravity="center_vertical"
                    android:layout_alignBaseline="@+id/watchdog_edit_treshold"
                    android:layout_toRightOf="@+id/watchdog_edit_treshold"
                    android:layout_toEndOf="@+id/watchdog_edit_treshold"
                    />
            </RelativeLayout>

            <!-- separator -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:src="@color/beeeon_separator"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="62dp"
                android:layout_marginStart="62dp"
                />


            <!-- "then" section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingStart="16dp"
                android:paddingRight="16dp"
                android:paddingEnd="16dp"
                >

                <TextView
                    android:id="@+id/watchdog_edit_then_icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:text="@string/icon_then"
                    android:background="@drawable/oval_pink"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="11dp"
                    android:layout_marginStart="11dp"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@+id/watchdog_edit_then_icon"
                    android:layout_toEndOf="@id/watchdog_edit_then_icon"
                    android:layout_alignTop="@id/watchdog_edit_then_icon"
                    >

                    <!-- group of action types -->
                    <RadioGroup
                        android:id="@+id/watchdog_edit_action_radiogroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/watchdog_edit_notification"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/watchdog_notification_send"
                            />

                        <RadioButton
                            android:id="@+id/watchdog_edit_actor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/watchdog_actor_change_state"
                           />
                    </RadioGroup>
                </LinearLayout>
            </RelativeLayout>

        <!-- notification -->
        <RelativeLayout
            android:id="@+id/watchdog_detail_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            >

            <!-- separator -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:src="@color/beeeon_separator"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="62dp"
                />

            <ImageView
                android:id="@+id/watchdog_edit_action_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="3dp"
                android:src="@drawable/ic_notification"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                />

            <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:id="@+id/watchdog_edit_action_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/watchdog_edit_action_icon"
                android:layout_toEndOf="@id/watchdog_edit_action_icon"
                android:layout_alignBottom="@id/watchdog_edit_action_icon"
                android:layout_alignTop="@id/watchdog_edit_action_icon"
                android:text="@string/notification_text"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                />


            <EditText
                android:id="@+id/watchdog_edit_notification_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/beeeon_secundary_pink"
                android:layout_below="@id/watchdog_edit_action_text"
                android:layout_alignLeft="@id/watchdog_edit_action_text"
                android:layout_alignStart="@id/watchdog_edit_action_text"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                />
        </RelativeLayout>

        <!-- actor -->
        <RelativeLayout
            android:id="@+id/watchdog_edit_actor_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            >

            <!-- separator -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:src="@color/beeeon_separator"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="62dp"
                android:layout_marginStart="62dp"
                />

            <ImageView
                android:id="@+id/watchdog_edit_actor_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="3dp"
                android:src="@drawable/ic_shutdown"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                />

            <TextView
                android:id="@+id/watchdog_edit_actor_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/watchdog_actor_change_state"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/watchdog_edit_actor_icon"
                android:layout_toEndOf="@id/watchdog_edit_actor_icon"
                android:layout_alignBottom="@id/watchdog_edit_actor_icon"
                android:layout_alignTop="@id/watchdog_edit_actor_icon"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                />

            <Spinner
                android:id="@+id/watchdog_edit_actor_spinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/watchdog_edit_actor_text"
                android:layout_alignLeft="@id/watchdog_edit_actor_text"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                />
        </RelativeLayout>

        <!-- last separator (needs to be here) -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:src="@color/beeeon_separator"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="62dp"
            android:layout_marginStart="62dp"
            />

    </LinearLayout>
    </ScrollView>
</LinearLayout>

