<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:paddingLeft="@dimen/activity_horizontal_margin"
				android:paddingRight="@dimen/activity_horizontal_margin"
				android:paddingTop="@dimen/activity_vertical_margin"
				android:paddingBottom="@dimen/activity_vertical_margin"
				tools:context="com.rehivetech.beeeon.gui.activity.SensorEditActivity$PlaceholderFragment">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="72dp"
		android:id="@+id/sen_edit_first_section"
		android:orientation="vertical">
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:textSize="12sp"
			android:textColor="@color/beeeon_text_hint"
			android:text="@string/sensor_name_label"/>
		<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/sen_edit_name"
			android:textSize="16sp"
			android:textColor="@color/beeeon_text_color"/>
		
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="72dp"
		android:id="@+id/sen_edit_second_section"
		android:layout_below="@+id/sen_edit_first_section"
		android:orientation="vertical">
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:layout_marginBottom="8dp"
			android:textSize="12sp"
			android:textColor="@color/beeeon_text_hint"
			android:text="@string/sensordetail_location_label"/>
		<Spinner
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/sen_edit_location"/>
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="72dp"
		android:id="@+id/sen_edit_third_section"
		android:layout_below="@+id/sen_edit_second_section"
		android:orientation="vertical"
		android:visibility="gone">
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:textSize="12sp"
			android:textColor="@color/beeeon_text_hint"
			android:text="@string/addsensor_new_location_hint"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<Spinner
				android:layout_width="60dp"
				android:layout_height="40dp"
				android:layout_gravity="center"
				android:id="@+id/sen_edit_new_loc_icon"/>
			<EditText
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:id="@+id/sen_edit_new_loc_text"/>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="72dp"
		android:id="@+id/sen_edit_fourth_section"
		android:layout_below="@+id/sen_edit_third_section"
		android:orientation="vertical">
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:layout_marginBottom="8dp"
			android:textSize="12sp"
			android:textColor="@color/beeeon_text_hint"
			android:text="@string/refresh_time"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:id="@+id/sen_edit_refreshtime_val"
				android:text="5 minutes"
				android:textSize="16sp"
				android:layout_gravity="center"
				android:textColor="@color/beeeon_text_color"/>
			<SeekBar
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:id="@+id/sen_edit_refreshtime"/>
		</LinearLayout>

	</LinearLayout>

</RelativeLayout>
