<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:focusable="true"
	android:focusableInTouchMode="true">

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/space_big"
			android:layout_marginRight="@dimen/space_big"
			android:layout_marginTop="@dimen/space_big"
			android:paddingBottom="?attr/actionBarSize">

			<android.support.design.widget.TextInputLayout
				android:id="@+id/fragment_add_dashboard_item_text_input"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<EditText
					android:id="@+id/fragment_add_dashboard_item_name_edit_text"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:hint="@string/dashboard_add_graph_name_hint"/>
			</android.support.design.widget.TextInputLayout>

			<TextView
				android:id="@+id/fragment_add_dashboard_item_module_spinner_label"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/space_big"
				android:layout_below="@id/fragment_add_dashboard_item_text_input"
				android:textAppearance="@style/TextAppearance.AppCompat.Caption"
				android:text="@string/dashboard_add_graph_week_module_label"/>

			<Spinner
				android:id="@+id/fragment_add_dashboard_item_module_spinner"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/fragment_add_dashboard_item_module_spinner_label"/>

			<TextView
				android:id="@+id/fragment_add_dashboard_item_graph_data_type"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/space_big"
				android:text="@string/dashboard_add_graph_week_data_type_label"
				android:textAppearance="@style/TextAppearance.AppCompat.Caption"
				android:layout_below="@id/fragment_add_dashboard_item_module_spinner"/>

			<Spinner
				android:id="@+id/fragment_add_dashboard_item_graph_data_type_spinner"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/fragment_add_dashboard_item_graph_data_type"/>

		</RelativeLayout>
	</ScrollView>

	<com.rehivetech.beeeon.gui.view.FloatingActionButton
		android:id="@+id/fragment_add_dashboard_item_button_done"
		style="@style/BeeeOn.FloatingActionButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="@dimen/space_big"
		android:layout_marginRight="@dimen/space_big"
		android:layout_marginBottom="@dimen/space_big"
		android:layout_gravity="bottom|end"
		android:src="@drawable/ic_content_save_white_24dp"/>
</FrameLayout>