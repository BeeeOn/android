<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="88dp"
	android:paddingTop="16dp"
	android:id="@+id/user_item_layout"
	>

	<ImageView
		android:id="@+id/adapter_user_icon"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:adjustViewBounds="true"
		android:layout_marginLeft="16dp"
		android:layout_marginStart="16dp"
		android:layout_marginRight="16dp"
		android:layout_marginEnd="16dp"
		android:padding="4dp"
		android:background="@drawable/oval_primary"
        android:src="@drawable/ic_person_white_48dp"
		/>

	<TextView
		android:id="@+id/adapter_user_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
		android:layout_marginLeft="72dp"
		android:layout_marginStart="72dp"
		android:textColor="@color/beeeon_primary_text"
		/>

	<TextView
		android:id="@+id/adapter_user_email"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textAppearance="@style/TextAppearance.AppCompat.Body1"
		android:textColor="@color/beeeon_secondary_text"
		android:layout_below="@+id/adapter_user_name"
		android:layout_alignLeft="@id/adapter_user_name"
		android:layout_alignStart="@id/adapter_user_name"
		/>

	<TextView
		android:id="@+id/adapter_user_role"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textAppearance="@style/TextAppearance.AppCompat.Body1"
		android:textColor="@color/beeeon_secondary_text"
		android:layout_below="@+id/adapter_user_email"
		android:layout_alignLeft="@id/adapter_user_email"
		android:layout_alignStart="@id/adapter_user_email"
		/>

	<!-- separator -->
	<View
		style="@style/BeeeOn.Divider"
		android:layout_alignParentBottom="true"
		/>

</RelativeLayout>
