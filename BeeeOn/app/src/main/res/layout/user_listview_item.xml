<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="88dp"
	android:paddingTop="16dp"
	android:id="@+id/user_item_layout"
	>

	<ImageView
		android:id="@+id/adapter_user_icon"
		android:layout_width="48dp"
		android:layout_height="48dp"
		android:adjustViewBounds="true"
		android:layout_marginRight="16dp"
		android:layout_marginLeft="8dp"
		android:padding="4dp"
		android:background="@drawable/oval_primary"
        android:src="@drawable/ic_person_white_48dp"
		/>

	<TextView
		android:id="@+id/adapter_user_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="@dimen/textsize_subhead"
		android:layout_marginLeft="72dp"
		android:layout_marginStart="72dp"
		android:textColor="@color/beeeon_primary_text"
		/>

	<TextView
		android:id="@+id/adapter_user_email"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="@dimen/textsize_body"
		android:textColor="@color/beeeon_secondary_text"
		android:layout_below="@+id/adapter_user_name"
		android:layout_alignLeft="@id/adapter_user_name"
		android:layout_alignStart="@id/adapter_user_name"
		/>

	<TextView
		android:id="@+id/adapter_user_role"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="@dimen/textsize_body"
		android:textColor="@color/beeeon_secondary_text"
		android:layout_below="@+id/adapter_user_email"
		android:layout_alignLeft="@id/adapter_user_email"
		android:layout_alignStart="@id/adapter_user_email"
		/>

	<!-- separator -->
	<View
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:background="@color/beeeon_separator"
		android:layout_alignParentBottom="true"
		android:layout_marginLeft="72dp"
		android:layout_marginStart="72dp"
		/>

</RelativeLayout>
