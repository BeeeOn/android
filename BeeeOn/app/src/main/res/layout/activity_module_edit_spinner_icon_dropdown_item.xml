<?xml version="1.0" encoding="utf-8"?>
<com.rehivetech.beeeon.gui.view.CheckableLinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal">

	<ImageView
		android:id="@+id/location_icon"
		android:contentDescription="@string/layout_activity_fragment_widget_placeholder_icon"
		android:layout_width="@dimen/custom_spinner_icon_size"
		android:layout_height="@dimen/custom_spinner_icon_size"
		android:paddingLeft="5dp"
		android:paddingRight="5dp"
		android:src="@drawable/ic_loc_unknown_gray"/>

	<CheckedTextView
		android:id="@+id/location_label"
		android:textColor="@color/black"
		android:singleLine="true"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"/>

</com.rehivetech.beeeon.gui.view.CheckableLinearLayout>