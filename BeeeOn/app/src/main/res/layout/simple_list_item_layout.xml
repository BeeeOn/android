<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="72dp">

	<ImageView
		android:id="@+id/simple_list_layout_icon"
		android:layout_centerVertical="true"
		android:layout_width="24dp"
		android:layout_height="24dp"
		android:layout_marginLeft="16dp"
		android:layout_marginStart="16dp"
		/>

	<TextView
		android:id="@+id/simple_list_layout_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="@color/beeeon_text_hint"
		android:textAppearance="@style/TextAppearance.AppCompat.Caption"
		android:layout_marginTop="20dp"
		android:layout_marginLeft="72dp"
		android:layout_marginStart="72dp"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_toLeftOf="@+id/simple_list_layout_button_details"
		android:layout_toStartOf="@+id/simple_list_layout_button_details"
		/>

	<TextView
		android:id="@+id/simple_list_layout_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
		android:layout_below="@+id/simple_list_layout_title"
		android:layout_alignLeft="@+id/simple_list_layout_title"
		android:layout_alignStart="@+id/simple_list_layout_title"
		android:layout_toLeftOf="@+id/simple_list_layout_button_details"
		android:layout_toStartOf="@+id/simple_list_layout_button_details"
		/>

	<Button
		android:id="@+id/simple_list_layout_button_details"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:drawablePadding="10dp"
		style="@style/Widget.AppCompat.Button.Borderless.Colored"
		android:text="@string/layout_simple_list_button_text"
		android:layout_centerVertical="true"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
		/>

</RelativeLayout>