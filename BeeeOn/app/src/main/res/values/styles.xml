<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:windowBackground">@color/beeeon_background</item>
    	<item name="android:colorBackground">@color/beeeon_background</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/BeeeOn.ActionBar</item>
        <!-- item name="actionModeCloseButtonStyle">@style/BeeeOn.NoCloseButton</item -->
        <item name="actionModeBackground">@color/darkgray</item>
        <item name="actionModeCloseDrawable">@drawable/ic_ab_up_compat</item>
        <!--item name="windowContentOverlay">@null</item-->
    	<!--item name="android:windowContentOverlay">@null</item-->
    	<!--item name="homeAsUpIndicator">@drawable/ic_ab_up_compat</item-->
		<item name="actionBarSize">56dip</item>
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
       
    <!-- ActionBar styles -->
    <style name="BeeeOn.ActionBar"  parent="@style/Widget.AppCompat.Light.ActionBar">
		<item name="android:background">@color/beeeon_primary_cyan</item>
        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/BeeeOn.ActionBar.TitleText</item>
        <item name="background">@color/beeeon_primary_cyan</item>
        
        <item name="actionModeBackground">@color/beeeon_drawer_bg</item>
        <item name="actionModeCloseDrawable">@drawable/ic_ab_up_compat</item>
    </style>
    
    <style name="CustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#b4000000</item>
        <item name="sv_showcaseColor">#00bcd4</item>
        <item name="sv_buttonText">Close</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
        <item name="sv_detailTextAppearance">@style/CustomText</item>
        
     </style>
     <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
         <item name="android:textColor">#00bcd4</item>
     </style>
     <style name="CustomText" parent="TextAppearance.ShowcaseView.Detail">
         <item name="android:textColor">#fff</item>
     </style>
     
     <style name="CustomShowcaseTheme_Next" parent="CustomShowcaseTheme">
        <item name="sv_buttonText">Next</item>
     </style>

    <!-- ActionBar title text -->
    <style name="BeeeOn.ActionBar.TitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <!-- ActionBar tabs text -->
    <style name="MyActionBarTabText"  parent="Widget.AppCompat.Light.ActionBar.TabText">
        <item name="android:textColor">@color/white</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>
    
    <style name="BeeeOn.NoCloseButton" parent="Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:visibility">gone</item>
    </style>

    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
	    <item name="android:windowNoTitle">true</item>
	    <item name="android:backgroundDimEnabled">true</item>
	    <item name="android:windowIsFloating">true</item>
	    <item name="android:windowBackground">@color/black</item>
    </style>


</resources>