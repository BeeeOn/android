<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:windowBackground">@color/beeeon_background</item>
    	<item name="android:colorBackground">@color/beeeon_light_gray</item>

        <item name="actionModeBackground">@color/darkgray</item>

        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="windowActionModeOverlay">true</item>

		<item name="actionBarSize">56dip</item>

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/beeeon_primary_cyan</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/beeeon_primary_cyan_dark</item>
        <item name="android:textColorPrimary">@color/beeeon_text_color</item>
        <item name="android:textColorSecondary">@color/beeeon_text_hint</item>

        <!-- colorAccent is used as the default value for colorControlActivated, which is used to tint widgets -->
        <item name="colorAccent">@color/beeeon_secundary_pink</item>

        <!-- there can also be set colorControlNormal, colorControlActivated colorControlHighlight, and colorSwitchThumbNormal. -->
        <item name="colorControlNormal">@color/beeeon_text_color</item>
        <item name="colorControlActivated">@color/beeeon_secundary_pink</item>
        <item name="colorControlHighlight">@color/beeeon_primary_cyan_light</item>


    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
       
    <!-- ActionBar styles -->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>
    
    <style name="CustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#b4000000</item>
        <item name="sv_showcaseColor">#00bcd4</item>
        <item name="sv_buttonText">Close</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
        <item name="sv_detailTextAppearance">@style/CustomText</item>
        
     </style>
     <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
         <item name="android:textColor">#00bcd4</item>
     </style>
     <style name="CustomText" parent="TextAppearance.ShowcaseView.Detail">
         <item name="android:textColor">#fff</item>
     </style>
     
     <style name="CustomShowcaseTheme_Next" parent="CustomShowcaseTheme">
        <item name="sv_buttonText">Next</item>
     </style>


    <style name="settingsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/beeeon_primary_cyan</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/beeeon_primary_cyan_dark</item>
        <item name="colorAccent">@color/beeeon_secundary_pink</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/beeeon_text_color</item>
        <item name="android:textColorSecondary">@color/beeeon_text_hint</item>
    </style>

    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
	    <item name="android:windowNoTitle">true</item>
	    <item name="android:backgroundDimEnabled">true</item>
	    <item name="android:windowIsFloating">true</item>
	    <item name="android:windowBackground">@color/black</item>
    </style>


</resources>