<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Style of toolbar's action mode -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/darkgray</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>

		<item name="actionBarSize">56dip</item>

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/beeeon_primary_cyan</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/beeeon_primary_cyan_dark</item>
        <!-- colorAccent is used as the default value for colorControlActivated, which is used to tint widgets -->
        <item name="colorAccent">@color/beeeon_secundary_pink</item>

        <item name="android:textColorPrimary">@color/beeeon_text_color</item>
        <item name="android:textColorSecondary">@color/beeeon_text_hint</item>

        <!-- there can also be set colorControlNormal, colorControlActivated colorControlHighlight, and colorSwitchThumbNormal. -->
        <item name="colorControlNormal">@color/beeeon_text_color</item>
        <item name="colorControlActivated">@color/beeeon_secundary_pink</item>
        <item name="colorControlHighlight">@color/beeeon_primary_cyan_light</item>

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Showcase themes -->
    <style name="CustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#b4000000</item>
        <item name="sv_showcaseColor">#00bcd4</item>
        <item name="sv_buttonText">Close</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
        <item name="sv_detailTextAppearance">@style/CustomText</item>
    </style>
    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#00bcd4</item>
    </style>
    <style name="CustomText" parent="TextAppearance.ShowcaseView.Detail">
        <item name="android:textColor">#fff</item>
    </style>
    <style name="CustomShowcaseTheme_Next" parent="CustomShowcaseTheme">
        <item name="sv_buttonText">Next</item>
    </style>


    <style name="settingsTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/beeeon_primary_cyan</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/beeeon_primary_cyan_dark</item>
        <item name="colorAccent">@color/beeeon_secundary_pink</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/beeeon_text_color</item>
        <item name="android:textColorSecondary">@color/beeeon_text_hint</item>
    </style>

    <!-- FAB style -->
	<style name="fab_item_menu" >
		<item name="fab_colorNormal">@color/beeeon_secundary_pink</item>
		<item name="fab_colorPressed">@color/black</item>
		<item name="fab_colorRipple">@color/beeeon_secundary_pink</item>
		<item name="fab_type">mini</item>
	</style>

    <!-- widget configuration activity -->

    <style name="MyLinearRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MyLinearRowTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/beeeon_primary_cyan</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="LinearRow" />

    <style name="LinearRow.Row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="LinearRow.Caption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/beeeon_secundary_pink</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="LinearRow.Item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/beeeon_primary_cyan</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="LinearRow.Item.OneLine" parent="LinearRow.Item">
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="AppWidget" />
    <style name="AppWidget.Base" />
    <style name="AppWidget.Base.ActionButton" parent="@style/Widget.AppCompat.ActionButton">
        <item name="android:minWidth">@dimen/widget_header_icon</item>
        <item name="android:minHeight">@dimen/widget_header_icon</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="AppWidget.Base.ActionButton.Overflow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:minWidth">@dimen/widget_header_icon</item>
        <item name="android:minHeight">@dimen/widget_header_icon</item>
        <item name="android:padding">0dp</item>
    </style>

	<style name="AppWidget.ActionButton" parent="@style/AppWidget.Base.ActionButton">
		<item name="android:background">@drawable/appwidget_actionbar_background</item>
	</style>

	<style name="AppWidget.ActionButton.Overflow" parent="@style/AppWidget.Base.ActionButton.Overflow">
		<item name="android:background">@drawable/appwidget_actionbar_background</item>
	</style>

	<style name="numberPicker" parent="@style/NPWidget.Material.NumberPicker" />
</resources>