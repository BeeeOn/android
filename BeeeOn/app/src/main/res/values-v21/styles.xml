<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="AppWidget.ActionButton" parent="@style/Widget.AppCompat.ActionButton" />
	<style name="AppWidget.ActionButton.Overflow" parent="@style/Widget.AppCompat.ActionButton.Overflow" />

	<style name="AppTheme" parent="AppBaseTheme">
		<item name="android:windowDrawsSystemBarBackgrounds">true</item>
		<item name="android:statusBarColor">?attr/colorPrimaryDark</item>
	</style>

	<!--MainActivity custom theme-->
	<style name="MainActivityTheme" parent="AppTheme">
		<item name="android:statusBarColor">@android:color/transparent</item>
	</style>

	<!-- preference activity has support of material styles -->
	<style name="SettingsActivity" parent="AppTheme" />

	<style name="GraphSettingStyle" parent="">
		<item name="android:layout_width">match_parent</item>
		<item name="contentPaddingLeft">0dp</item>
		<item name="contentPaddingRight">0dp</item>
		<item name="contentPaddingBottom">0dp</item>
	</style>

</resources>