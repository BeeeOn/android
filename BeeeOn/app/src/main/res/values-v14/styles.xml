<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
        <item name="android:windowBackground">@color/beeeon_background</item>
    	<item name="android:colorBackground">@color/beeeon_background</item>

        <!-- item name="android:actionModeCloseButtonStyle">@style/BeeeOn.NoCloseButton</item-->
        <item name="android:actionModeBackground">@color/darkgray</item>
        <item name="actionModeBackground">@color/darkgray</item>

        <item name="actionBarDivider">@null</item>
    	<item name="android:actionBarDivider">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--item name="android:actionOverflowButtonStyle">@style/BeeeOn.ActionBar.Overflow</item-->

        <item name="windowActionModeOverlay">true</item>

        <item name="showcaseViewStyle">@style/CustomShowcaseTheme</item>

		<item name="android:actionBarSize">56dip</item>


        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/beeeon_primary_cyan</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/beeeon_primary_cyan_dark</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/beeeon_text_hint</item>

        <!-- colorAccent is used as the default value for colorControlActivated, which is used to tint widgets -->
        <item name="colorAccent">@color/beeeon_secundary_pink</item>

        <!-- there can also be set colorControlNormal, colorControlActivated colorControlHighlight, and colorSwitchThumbNormal. -->
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/beeeon_secundary_pink</item>
        <item name="colorControlHighlight">@color/beeeon_primary_cyan_light</item>

        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>


    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    
    <style name="BeeeOn.NoCloseButton" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:visibility">gone</item>
    </style>
    
    <style name="BeeeOn.ActionBar.Overflow" parent="android:Widget.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_ab_overflow_compat</item>
    </style> 
    
    <style name="BeeeOn.Custom.SeekBar" parent="android:Widget.Holo.Light.SeekBar">
      <item name="android:progressDrawable">@drawable/customholotheme_scrubber_progress_horizontal_holo_light</item>
      <item name="android:indeterminateDrawable">@drawable/customholotheme_scrubber_progress_horizontal_holo_light</item>
      <item name="android:thumb">@drawable/customholotheme_scrubber_control_selector_holo_light</item>
  	</style>
  	<style name="BeeeOn.Custom.Button" parent="android:Widget.Button">
	  <item name="android:background">@drawable/apptheme_btn_default_holo_light</item>
    </style>

    <style name="BeeeOn.Custom.ImageButton" parent="android:Widget.ImageButton">
	  <item name="android:background">@drawable/apptheme_btn_default_holo_light</item>
    </style>
  
    <style name="CustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#b4000000</item>
        <item name="sv_showcaseColor">#00bcd4</item>
        <item name="sv_buttonText">Close</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
        <item name="sv_detailTextAppearance">@style/CustomText</item>
        
     </style>
     <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
         <item name="android:textColor">#00bcd4</item>
     </style>
     <style name="CustomText" parent="TextAppearance.ShowcaseView.Detail">
         <item name="android:textColor">#fff</item>
     </style>

    <style
        name="settingsTheme"
        parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/beeeon_primary_cyan</item>
        <item name="colorAccent">@color/beeeon_secundary_pink</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/beeeon_text_color</item>
        <item name="android:textColorSecondary">@color/beeeon_text_hint</item>
    </style>

</resources>