<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="Theme.Sherlock.Light">
        <!-- API 14 theme customizations can go here. -->
        <item name="android:windowBackground">@color/iha_background</item>
    	<item name="android:colorBackground">@color/iha_background</item>
        <item name="android:actionBarStyle">@style/IHA.ActionBar</item>
        <item name="android:actionModeCloseButtonStyle">@style/IHA.NoCloseButton</item>
        <item name="windowContentOverlay">@null</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_ab_up_compat</item>
        <item name="android:actionOverflowButtonStyle">@style/IHA.ActionBar.Overflow</item>
        
        <item name="showcaseViewStyle">@style/CustomShowcaseTheme</item>
        
    	<item name="android:windowContentOverlay">@null</item>
		<item name="android:actionBarSize">56dip</item>
    </style>

    
    <style name="IHA.ActionBar" parent="@style/Widget.Sherlock.Light.ActionBar">
	    <item name="android:background">@color/iha_primary_cyan</item>
	    <item name="android:titleTextStyle">@style/IHA.ActionBar.TitleText</item>
	    
	     <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/IHA.ActionBar.TitleText</item>
        <item name="background">@color/iha_primary_cyan</item>
        
		
        
    </style>

    <!-- ActionBar title text -->
    <style name="IHA.ActionBar.TitleText" parent="@style/TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>
    
    <style name="IHA.NoCloseButton" parent="@style/Widget.Sherlock.ActionButton.CloseMode">
        <item name="android:visibility">gone</item>
    </style>
    
    <style name="IHA.ActionBar.Overflow" parent="android:Widget.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_ab_overflow_compat</item>
    </style> 
    
    <style name="IHA.Custom.SeekBar" parent="android:Widget.Holo.Light.SeekBar">
      <item name="android:progressDrawable">@drawable/customholotheme_scrubber_progress_horizontal_holo_light</item>
      <item name="android:indeterminateDrawable">@drawable/customholotheme_scrubber_progress_horizontal_holo_light</item>
      <item name="android:thumb">@drawable/customholotheme_scrubber_control_selector_holo_light</item>
  	</style>
  	<style name="IHA.Custom.Button" parent="android:Widget.Button">
	  <item name="android:background">@drawable/apptheme_btn_default_holo_light</item>
    </style>

    <style name="IHA.Custom.ImageButton" parent="android:Widget.ImageButton">
	  <item name="android:background">@drawable/apptheme_btn_default_holo_light</item>
    </style>
  
    <style name="CustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#b4000000</item>
        <item name="sv_showcaseColor">#00bcd4</item>
        <item name="sv_buttonText">Close</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
        <item name="sv_detailTextAppearance">@style/CustomText</item>
        
     </style>
     <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
         <item name="android:textColor">#00bcd4</item>
     </style>
     <style name="CustomText" parent="TextAppearance.ShowcaseView.Detail">
         <item name="android:textColor">#fff</item>
     </style>
     
    

</resources>