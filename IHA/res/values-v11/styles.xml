<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="Theme.Sherlock.Light.DarkActionBar">
        <!-- API 11 theme customizations can go here. -->
		<item name="android:windowBackground">@color/iha_background</item>
    	<item name="android:colorBackground">@color/iha_background</item>
		<item name="android:actionModeCloseButtonStyle">@style/NoCloseButton</item>
        <item name="android:actionBarStyle">@style/Widget.MyTheme.ActionBar</item>
    </style>
    
    <!-- ActionBar styles -->
    <style name="Widget.MyTheme.ActionBar"  parent="Widget.Sherlock.Light.ActionBar">
		<item name="android:background">@color/log_blue2</item>
		<item name="android:titleTextStyle">@style/Widget.MyTheme.ActionBar.TitleText</item>
        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/Widget.MyTheme.ActionBar.TitleText</item>
        <item name="background">@color/log_blue2</item>

    </style>

    <!-- ActionBar title text -->
    <style name="Widget.MyTheme.ActionBar.TitleText" parent="@style/TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>
    
    <style name="NoCloseButton" parent="@style/Widget.Sherlock.ActionButton.CloseMode">
        <item name="android:visibility">gone</item>
    </style>
    
   	<style name="SeekBarCustomHoloTheme" parent="android:Widget.Holo.Light.SeekBar">
      <item name="android:progressDrawable">@drawable/customholotheme_scrubber_progress_horizontal_holo_light</item>
      <item name="android:indeterminateDrawable">@drawable/customholotheme_scrubber_progress_horizontal_holo_light</item>
      <item name="android:thumb">@drawable/customholotheme_scrubber_control_selector_holo_light</item>
  	</style>
  	
   	<style name="MyDialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowIsTranslucent">true</item>
	    <item name="android:windowBackground">@color/black</item>
	    <item name="android:windowNoTitle">true</item>
	    <item name="android:backgroundDimEnabled">true</item>
	    <item name="android:windowIsFloating">true</item>
    </style>

</resources>