<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sensordetail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

	<RelativeLayout
	    android:id="@+id/sensordetail_scroll"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/iha_item_solo_bg"
	    android:layout_margin="10dp"
	 	android:paddingBottom="15dp"
	 	android:layout_gravity="top"
	    android:orientation="horizontal" >
	
	    <ImageView
	        android:id="@+id/sen_detail_icon"
	        android:layout_width="120dp"
	        android:layout_height="120dp"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="10dp"
	        android:layout_marginRight="10dp"
	        android:src="@drawable/dev_unknown"
	        android:contentDescription="Icon of device" 
	        android:visibility="invisible"/>
	
	    <TextView
	        android:id="@+id/sen_detail_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignTop="@+id/sen_detail_icon"
	        android:layout_marginBottom="10dp"
	        android:layout_marginRight="15dp"
	        android:layout_toRightOf="@+id/sen_detail_icon"
	        android:ellipsize="marquee" 
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
	        android:gravity="right"
	        android:text="NameSensor"
	        android:textColor="@color/iha_text_color"
	        android:textSize="35dp"
	        android:textStyle="normal"
	        android:visibility="invisible" />
	    
	    <EditText
	        android:id="@+id/sen_detail_name_edit"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignTop="@+id/sen_detail_icon"
	        android:layout_toRightOf="@+id/sen_detail_icon"
	        android:layout_marginRight="3dp"
	        android:layout_marginTop="-7dp"
	        android:gravity="right"
	        android:inputType="textCapSentences"
	        android:text="NameSensor"
	        android:textColor="@color/iha_text_color"
	        android:textSize="35dp"
	        android:textStyle="normal"
	        android:visibility="invisible" />
	
	    <SeekBar
	        android:id="@+id/sen_refresh_time_seekBar"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        style="@style/SeekBarCustomHoloTheme"
	        android:layout_alignLeft="@+id/sen_detail_icon"
	        android:layout_below="@+id/sen_detail_icon"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="38dp"
	        android:visibility="invisible" />
	
	    <TextView
	        android:id="@+id/sen_refresh_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@id/sen_refresh_time_seekBar"
	        android:layout_below="@+id/sen_detail_icon"
	        android:layout_marginTop="14dp"
	        android:text="@string/refresh_time"
	        android:textColor="@color/iha_primary_cyan"
	        android:textSize="18dp" 
	        android:visibility="invisible"/>
	    <TextView
	        android:id="@+id/sen_refresh_time_value"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/sen_refresh_time"
	        android:layout_below="@+id/sen_detail_icon"
	        android:layout_marginTop="14dp"
	        android:text="TextView"
	        android:textColor="@color/iha_secundary_pink"
	        android:textSize="18dp" 
	        android:visibility="invisible"/>
	
	    <TextView
	        android:id="@+id/sen_detail_loc_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/sen_detail_value_wrap"
	        android:layout_alignRight="@+id/sen_refresh_time_seekBar"
	        android:layout_toRightOf="@+id/sen_detail_icon"
	        android:ellipsize="marquee" 
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
	        android:layout_marginRight="5dp"
	        android:layout_marginTop="10dp"
	        android:gravity="right"
	        android:text="location"
	        android:textColor="@color/iha_text_hint"
	        android:textSize="25dp"
	        android:visibility="invisible"/>
	
	    <TextView
	        android:id="@+id/sen_graph_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/sen_refresh_time_seekBar"
	        android:layout_below="@+id/sen_refresh_time_seekBar"
	        android:layout_marginTop="10dp"
	        android:text="@string/sen_graph_label"
	        android:textColor="@color/iha_primary_cyan"
	        android:textSize="18dp" 
	        android:visibility="invisible"/>
	
	    <LinearLayout
	        android:id="@+id/sen_graph_layout"
	        android:layout_width="match_parent"
	        android:layout_height="200dp"
	        android:layout_alignLeft="@id/sen_graph_name"
	        android:layout_alignRight="@id/sen_refresh_time_seekBar"
	        android:layout_below="@id/sen_graph_name"
	        android:orientation="vertical" 
	        android:visibility="visible">

	    </LinearLayout>
		
	    <TextView
	        android:id="@+id/sen_graph_info"
	        android:layout_width="140dp"
	        android:layout_height="40dp"
	        android:layout_below="@+id/sen_graph_layout"
	        android:layout_marginTop="-120dp"
	        android:fitsSystemWindows="true"
	        android:gravity="center"
	        android:text="@string/loading_data"
	        android:textColor="@color/iha_secundary_pink"
	        android:textSize="20sp"
	        android:visibility="invisible" />

	   <!-- 
	   		android:background="@color/alpha_grey"
	   		android:layout_marginLeft="130dp"
	         -->

	    <RelativeLayout
	        android:id="@+id/sen_rectangle_name"
	        android:layout_width="10dp"
	        android:layout_height="10dp"
	        android:layout_marginRight="-5dp"
	        android:layout_marginBottom="3dp"
	        android:layout_alignBottom="@+id/sen_detail_name"
	        android:layout_alignRight="@+id/sen_detail_name" 
	        android:background="@drawable/rectangle_pink_background"
	        android:visibility="invisible">
	    </RelativeLayout>
	    <RelativeLayout
	        android:id="@+id/sen_rectangle_loc"
	        android:layout_width="10dp"
	        android:layout_height="10dp"
	        android:layout_marginRight="-5dp"
	        android:layout_marginBottom="0dp"
	        android:layout_alignBottom="@+id/sen_detail_loc_name"
	        android:layout_alignRight="@+id/sen_detail_loc_name" 
	        android:background="@drawable/rectangle_pink_background"
	        android:visibility="invisible">
	    </RelativeLayout>

	    <Spinner
	        android:id="@+id/sen_detail_spinner_choose_location"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/sen_detail_value_wrap"
	        android:layout_alignRight="@+id/sen_detail_value_wrap"
	        android:layout_below="@+id/sen_rectangle_name"
	        android:layout_marginBottom="-7dp"
	        android:layout_marginTop="-8dp"
	        android:layout_toRightOf="@+id/sen_detail_icon"
	        android:layout_marginLeft="5dp"
	        android:visibility="gone" />

	    <TextView
	        android:id="@+id/sen_detail_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/sen_refresh_time"
	        android:layout_alignBottom="@+id/sen_refresh_time"
	        android:layout_alignRight="@+id/sen_detail_value_wrap"
	        android:text="1.1. 1970"
	        android:textColor="@color/iha_text_hint"
	        android:textSize="15dp" 
	        android:visibility="invisible"/>

	    <LinearLayout
	        android:id="@+id/sen_detail_value_wrap"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        
	        android:layout_alignBottom="@+id/sen_detail_icon"
	        android:layout_alignRight="@+id/sen_refresh_time_seekBar" >
	        
	        
	        <TextView
		        android:id="@+id/sen_detail_value"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        
		        android:text="ValueSensor"
		        android:textColor="@color/iha_secundary_pink"
		        android:textSize="32dp" 
		        android:visibility="invisible"/>
		    
		    <Button
		        android:id="@+id/sen_detail_value_switch"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:maxHeight="20dp"
		        android:text="ValueSensorSwitch"
		        android:textColor="@color/iha_secundary_pink"
		        android:textSize="30dp" 
		        android:visibility="gone"/>
	    </LinearLayout>
	    
	
	</RelativeLayout>

</ScrollView>