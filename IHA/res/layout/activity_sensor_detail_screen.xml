<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sensordetail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

	<RelativeLayout
	    android:id="@+id/sensordetail_scroll"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/shadow"
	    android:layout_marginLeft="10dp"
	 	android:layout_marginRight="10dp"
	 	android:layout_marginTop="10dp"
	 	android:paddingBottom="15dp"
	    android:orientation="horizontal" >
	
	    <ImageView
	        android:id="@+id/sen_detail_icon"
	        android:layout_width="120dp"
	        android:layout_height="120dp"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="10dp"
	        android:src="@drawable/dev_unknown"
	        android:contentDescription="Icon of device" />
	
	    
	    <TextView
	        android:id="@+id/sen_detail_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignTop="@+id/sen_detail_icon"
	        android:layout_marginRight="10dp"
	        android:layout_marginBottom="10dp"
	        android:gravity="right"
	        android:text="NameSensor"
	        
	        android:textColor="@color/log_blue2"
	        android:textSize="30sp"
	        android:textStyle="bold" />
	    
	    <EditText
	        android:id="@+id/sen_detail_name_edit"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignTop="@+id/sen_detail_icon"
	        android:layout_marginRight="-2dp"
	        android:layout_marginTop="-7dp"
	        android:gravity="right"
	        android:text="NameSensor"
	        android:textColor="@color/log_blue2"
	        android:textSize="30sp"
	        android:textStyle="bold"
	        android:visibility="invisible"
	        android:inputType="textCapSentences" />
	
	    <SeekBar
	        android:id="@+id/sen_refresh_time_seekBar"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        style="@style/SeekBarCustomHoloTheme"
	        android:layout_alignLeft="@+id/sen_detail_icon"
	        android:layout_alignRight="@+id/sen_detail_time"
	        android:layout_below="@+id/sen_detail_icon"
	        android:layout_marginTop="38dp" />
	
	    <TextView
	        android:id="@+id/sen_refresh_time"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/sen_refresh_time_seekBar"
	        android:layout_alignRight="@+id/sen_refresh_time_seekBar"
	        android:layout_below="@+id/sen_detail_icon"
	        android:layout_marginTop="14dp"
	        android:text="TextView"
	        android:textColor="@color/log_blue2"
	        android:textSize="18sp" />
	
	    <TextView
	        android:id="@+id/sen_detail_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/sen_detail_icon"
	        android:layout_alignRight="@+id/sen_detail_value"
	        android:text="1.1. 1970"
	        android:textColor="@color/darkgray"
	        android:textSize="15sp" />
	
	    <TextView
	        android:id="@+id/sen_detail_loc_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="10dp"
	        android:layout_above="@+id/sen_detail_value"
	        android:text="location"
	        android:textColor="@color/darkgray"
	        android:textSize="15sp" />
	
	    <TextView
	        android:id="@+id/sen_detail_value"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/sen_detail_time"
	        android:layout_alignRight="@+id/sen_detail_loc_name"
	        android:layout_marginBottom="-5dp"
	        android:text="ValueSensor"
	        android:textColor="@color/log_blue2"
	        android:textSize="32sp" />
	
	    <TextView
	        android:id="@+id/sen_graph_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/sen_refresh_time_seekBar"
	        android:layout_below="@+id/sen_refresh_time_seekBar"
	        android:layout_marginTop="10dp"
	        android:text="@string/sen_graph_label"
	        android:textColor="@color/log_blue2"
	        android:textSize="18sp" />
	
	    <LinearLayout
	        android:id="@+id/sen_graph_layout"
	        android:layout_width="match_parent"
	        android:layout_height="200dp"
	        android:layout_alignLeft="@id/sen_graph_name"
	        android:layout_alignRight="@id/sen_refresh_time_seekBar"
	        android:layout_below="@id/sen_graph_name"
	        android:orientation="vertical" >
	
	    </LinearLayout>

	    <RelativeLayout
	        android:layout_width="10dp"
	        android:layout_height="10dp"
	        android:layout_marginRight="-2dp"
	        android:layout_alignBottom="@+id/sen_detail_name"
	        android:layout_alignRight="@+id/sen_detail_name" 
	        android:background="@drawable/rectangle_background">
	    </RelativeLayout>
	
	</RelativeLayout>

</ScrollView>