<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minWidth="260dp"
    android:minHeight="200dp"
    android:background="@color/light_gray"
   
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/log_blue2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/addadapter_add_adapter"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:paddingBottom="15dp"
            android:paddingTop="5dp"
            android:text="@string/addadapter_add_adapter"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textIsSelectable="false" />

    </LinearLayout>
	
	<ImageButton
	    android:id="@+id/addadapter_qrcode_button"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="20dp"
	    android:layout_marginBottom="20dp"
	    android:layout_gravity="center_horizontal"
	    android:contentDescription="@string/addadapter_qrcode_desc"
	    android:src="@drawable/qrcode" />
	
	<TextView
	    android:id="@+id/addadapter_or"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="25dp"
	    android:text="@string/addsensor_or"
	    android:textColor="@color/log_blue2" 
	    android:gravity="center_horizontal"
	    android:textIsSelectable="false"
	    android:textAppearance="?android:attr/textAppearanceMedium" />
	
	<EditText
	    android:id="@+id/addadapter_ser_num"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="30dp"
	    android:layout_marginLeft="5dp"
	    android:layout_marginRight="5dp"
	    android:ems="10"
	    android:hint="@string/addadapter_ser_num_hint"
	    android:inputType="numberDecimal"
	    android:textColor="@color/log_blue2" />

	<LinearLayout
	    android:id="@+id/addadapter_buttons"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >

		<Button
		    android:id="@+id/addadapter_add_button"
		    android:layout_width="130dp"
		    android:layout_height="match_parent"
		    android:layout_marginBottom="5dp"
		    android:enabled="false"
		    android:text="@string/notification_add" />

		<Button
		    android:id="@+id/addadapter_cancel_button"
		    android:layout_width="130dp"
		    android:layout_height="match_parent"
		    android:layout_gravity="right"
		    android:layout_marginBottom="5dp"
		    android:text="@string/notification_cancel"/>

	</LinearLayout>

</LinearLayout>
