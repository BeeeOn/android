<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ListView
        android:id="@+id/listviewofsensors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" 
        android:divider="@null">
    </ListView>
    <TextView
        android:id="@+id/nosensorlistview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/no_sensor_cap"
        android:textSize="40dp"
        android:visibility="gone"
        android:textColor="@color/darkgray"
        />

    <ImageView
        android:id="@+id/nosensor_addsensor"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/nosensorlistview"
        android:layout_centerInParent="true"
        android:layout_marginTop="14dp"
        android:clickable="true"
        android:visibility="gone"
        android:src="@drawable/add_sensor_view" />

</RelativeLayout>
