<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minWidth="270dp"
    android:minHeight="200dp"
    android:padding="10dp"
    android:background="@color/light_gray"
    >
    
    <TextView
        android:id="@+id/addsensor_add_sensor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_horizontal"
        android:text="@string/addsensor_add_sensor"
        android:textColor="@color/log_blue2"
	    android:textIsSelectable="false"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <LinearLayout 
        android:orientation="horizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="10dp"
        >
        
	    <TextView
	        android:id="@+id/addsensor_type"
	        android:layout_width="250dp"
	        android:layout_height="wrap_content"
	        android:text="@string/addsensor_type"
	        android:textColor="@color/log_blue2"
		    android:textIsSelectable="false"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	     
	    <TextView
	        android:id="@+id/addsensor_involved_time"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/addsensor_involved_time"
	        android:textColor="@color/log_blue2"
		    android:textIsSelectable="false"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	    
    </LinearLayout>

    <EditText
        android:id="@+id/addsensor_sensor_name_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="@string/addsensor_sensor_name_hint"
        android:inputType="textNoSuggestions" />
    
    <LinearLayout 
        android:orientation="horizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="10dp"
        >
	    
	    <Spinner
	        android:id="@+id/spinner_choose_location"
	        android:layout_width="180dp"
	        android:layout_height="wrap_content"
	        android:paddingTop="0dp" />
	    
	    <TextView
	        android:id="@+id/addsensor_or"
	        android:layout_width="80dp"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="@string/addsensor_or"
	        android:textColor="@color/log_blue2"
		    android:textIsSelectable="false"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	    
	    <EditText
	        android:id="@+id/addsensor_new_location_hint"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:layout_gravity="right"
	        android:hint="@string/addsensor_new_location_hint"
	        android:inputType="textNoSuggestions" />
        
    </LinearLayout>

   <Button
        android:id="@+id/addsensor_add"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/notification_add" />

   
    
</LinearLayout>
