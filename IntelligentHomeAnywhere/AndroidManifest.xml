<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cz.vutbr.fit.intelligenthomeanywhere"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" >
		</meta-data>
        <activity
            android:name="cz.vutbr.fit.intelligenthomeanywhere.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            
        </activity>
        <activity
            android:name="cz.vutbr.fit.intelligenthomeanywhere.LocactionScreenActivity"
            android:label="@string/title_activity_locaction_screen" >
        </activity>
        <activity
            android:name="cz.vutbr.fit.intelligenthomeanywhere.DataOfLocationScreenActivity"
            android:label="@string/title_activity_data_of_locacion_screen" >
        </activity>
        <activity
            android:name="cz.vutbr.fit.intelligenthomeanywhere.Notification"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="cz.vutbr.fit.intelligenthomeanywhere.AddSensorActivity"
            android:label="@string/title_activity_add_sensor"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="cz.vutbr.fit.intelligenthomeanywhere.SensorDetailActivity"
