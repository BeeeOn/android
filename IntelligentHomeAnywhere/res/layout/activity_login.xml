<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/blue"
    tools:context=".LoginActivity" >

    <TextView
        android:id="@+id/login_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="@string/login_app_name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/login_app_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_app_name"
        android:layout_below="@+id/login_app_name"
        android:layout_marginTop="16dp"
        android:text="@string/login_app_sign_in" />

    <ImageButton
        android:id="@+id/login_app_btn_google"
        android:layout_width="70dp"
        android:layout_height="64dp"
        android:layout_alignLeft="@+id/login_app_sign_in"
        android:layout_below="@+id/login_app_sign_in"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="24dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/ic_google_ac" android:contentDescription="TODO"/>

    <ImageButton
        android:id="@+id/login_app_btn_mojeid"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignBottom="@+id/login_app_btn_google"
        android:layout_alignRight="@+id/login_app_name"
        android:layout_alignTop="@+id/login_app_btn_google"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/ic_mojeid" />

    <TextView
        android:id="@+id/txtToken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/login_app_btn_google"
        android:layout_centerVertical="true"
        android:text="TextView" />

</RelativeLayout>