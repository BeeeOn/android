<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/blue"
    tools:context=".LoginActivity" >

    <TextView
        android:id="@+id/login_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="@string/login_app_name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/login_app_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_app_name"
        android:layout_below="@+id/login_app_name"
        android:layout_marginTop="16dp"
        android:text="@string/login_app_sign_in" />

    <ImageButton
        android:id="@+id/login_app_btn_google"
        android:layout_width="70dp"
        android:layout_height="64dp"
        android:layout_alignLeft="@+id/login_app_sign_in"
        android:layout_below="@+id/login_app_sign_in"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="24dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/ic_google_ac" android:contentDescription="TODO"/>

    <ImageButton
        android:id="@+id/login_app_btn_mojeid"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignBottom="@+id/login_app_btn_google"
        android:layout_alignRight="@+id/login_app_name"
        android:layout_alignTop="@+id/login_app_btn_google"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/ic_mojeid" />


    <TextView
        android:id="@+id/login_or_use"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_password"
        android:layout_below="@+id/login_password"
        android:layout_marginTop="14dp"
        android:text="@string/login_or_use"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <RadioGroup
        android:id="@+id/login_radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_or_use"
        android:layout_below="@+id/login_or_use" >

        <RadioButton
            android:id="@+id/login_radio_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/login_radio_facebook" />

        <RadioButton
            android:id="@+id/login_radio_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_radio_google" />

        <RadioButton
            android:id="@+id/login_radio_mojeid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_radio_mojeid" />

    </RadioGroup>

    <Button
        android:id="@+id/login_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_radioGroup"
        android:layout_toRightOf="@+id/login_user_name"
        android:text="@string/login_login" />

</RelativeLayout>